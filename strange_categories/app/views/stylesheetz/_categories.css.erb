h2.polymorphe_headline { padding: 10px 23px 15px; margin:0; background: transparent url('/images/fineline/spezial/tag.png') 0px 11px no-repeat; color: #336699; font-size: 15px; font-style: italic;font-weight: bold; }

h2.polymorphe_form_head, h2.polymorphe_form_head_toggle { padding: 10px 23px 15px; margin:0; background: transparent url('/images/fineline/spezial/closed_pulldown.png') 3px 12px no-repeat; color: #336699; font-size: 15px; font-style: italic;font-weight: bold; cursor: pointer; }
h2.polymorphe_form_head.aktiv, h2.polymorphe_form_head_toggle.aktiv { background: transparent url('/images/fineline/spezial/pulldown.png') 3px 12px no-repeat; }
h2.polymorphe_form_head a, h2.polymorphe_form_head_toggle a { color: #336699; font-size: 15px; font-style: italic;font-weight: bold; }
h2.polymorphe_form_head a:hover, h2.polymorphe_form_head_toggle a:hover { color: #666666; font-size: 15px; font-style: italic;font-weight: bold; }

.polymorphe_form_box { padding: 10px 23px 15px; }


.selected_tag, .selected_tag:hover { position: relative; padding: 0; margin: 0 10px 10px 0; display: block; float: left; font-weight: bold; color: #555; 
	border: 1px solid #336699; vertical-align: top;
	<%= fine_borderRadius( '5px' ) %>
	<%= fine_backgroundGradient( '#667f99', '#41545e' ) %>  }

a.available_tag { position: relative; padding: 0; margin: 0 10px 10px 0; display: block; float: left; font-weight: bold; color: #555; 
	border: 1px solid #aaa; <%= fine_borderRadius( '5px' ) %> vertical-align: top;
	<%= fine_backgroundGradient( '#f5f2f2', '#cdcdcd' ) %> }

.selected_tag .selected_tag_deleta, a.available_tag .selected_tag_deleta { margin:0; vertical-align: top;
		height: 18px; width:18px; padding: 1px 0; display:inline-block; margin:0; border-right: solid 1px #ccc;}

.selected_tag .selected_tag_name { line-height: 20px; padding: 0 10px 0px 5px; display:inline-block; color:#fff; font-weight:normal; height: 20px; vertical-align: top; margin:0;}
a.available_tag .selected_tag_name { line-height: 20px; padding: 0 10px 0px 5px; display:inline-block; color:#369; font-weight:normal; vertical-align: top; margin:0;}


.selected_tag_deleta:hover { <%= fine_backgroundGradient( '#336699', '#214c63' ) %> }
a.available_tag:hover .selected_tag_deleta { <%= fine_backgroundGradient( '#667f99', '#41545e' ) %> }


#objekt_tag_box { padding: 10px 23px 15px; }

