<%= render 'admin/shared/module_sub_menu' %>

<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 50, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_categories.headlines.tags_index') %></h1>

	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<% if @tags.count > 1 %>
					<h2>Aktuell sind <%= @tags.count %> Tag´s vorhanden.</h2>
				<% elsif @tags.count == 1 %>
					<h2>Aktuell ist <%= @tags.count %> Tag vorhanden.</h2>
				<% else %>
					<h2>Aktuell sind keine Tag´s vorhanden.</h2>
				<% end %>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>

		<div class="box">
			<div class="in_box">
				<br/>
				<% @tags.each do |tag| %>

					
					<div class="selected_tag" id="<%= dom_id(tag)%>">

						<div class="selected_tag_deleta">
							<%# strange_selected_delete( tag, :url => "/admin/tags/#{tag.id}/#{data.class.to_s.singularize.downcase}/#{data.id.to_s}/remove", :tooltip => 'Tag löschen' ) %>
							<%= fineline_icon_delete( tag, :url => admin_tag_path(tag), :tooltip => 'Tag löschen' ) %>


						</div>

						<div class="selected_tag_name">
							<%= tag.name %>
						</div>

						<div class="clearfix"></div>

					</div>
				<% end %>
				<div class="clearfix"></div>
				<br/>
			</div>
		</div>
		
	</div>
</div>


<%= render 'admin/shared/kats_sidebar' %>