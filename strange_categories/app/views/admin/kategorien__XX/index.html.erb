<%= render 'admin/shared/module_sub_menu' %>

<div class="admin_box">
	<h1>Kategorien</h1>
	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<% if @kategorien.count > 1 %>
					<h2>Aktuell sind <%= @kategorien.count %> Kategorien vorhanden.</h2>
				<% elsif @kategorien.count == 1 %>
					<h2>Aktuell ist <%= @kategorien.count %> Kategorie vorhanden.</h2>
				<% else %>
					<h2>Aktuell sind keine Kategorien vorhanden.</h2>
				<% end %>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box white">
				<br/>
				<% @kategorien.each do |bk| %>
					
					<%= render 'admin/kategorien/kat', :bk => bk %>
					
				<% end %>
				<div class="clearfix"></div>
				<br/>
			</div>
		</div>
		
	</div>
</div>

<%= render 'admin/shared/kats_sidebar' %>