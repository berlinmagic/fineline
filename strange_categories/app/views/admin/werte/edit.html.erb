<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 40, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_categories.headlines.wert_edit') %></h1>

	<div class="admin_in_box">
		<%= form_for(@wert, :url => { :controller => 'admin/werte', :action => :update}) do |f| %>
		<div class="box">
			<div class="in_box">
				<p>Hier haben Sie die MÃ¶glichkeit diesen Wert zu bearbeiten.</p>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= render 'shared/error', :item => f.object%>
			</div>
		</div>
