.jPicker.Container { margin-top: 50% !important; <%= fineBorderRadius( '0', '8px', '8px', '8px' ) %> background: #fff; border: solid 1px #ccc; padding: 10px 10px 0; <%= fine_boxShadow( '0 0 5px 20px rgba(0,0,0,.6)' ) %> }


.jPicker.Container .jPicker_box {  display: block; }


.jPicker.Container .jPicker_box .in_jPicker { width: 100%; display: block; 	<%= fineBorderRadius( '0', '5px', '5px', '5px' ) %>
	<%= fine_textShadow( '0 0 3px #082f55, 0 0 3px #082f55' ) %> border: 0; padding: 10px;
	<%= fine_boxShadow( 'inset 1px 1px 1px 0px rgba(255,255,255,.4)' ) %> width: 442px; height: 260px;
	background: #f3f3f3; margin: 0 0 10px; }

.jPicker.Container .jPicker_box .in_jPicker .Move { width: 100%; display: block;}

.jPicker.Container .jPicker_box .in_jPicker .jPicker_Map_box { width: 256px; display: inline-block; float: left; 
	padding: 0 10px 0 0; }
.jPicker.Container .jPicker_box .in_jPicker .jPicker_Bar_box { width: 24px; display: inline-block; float: left; padding: 0 10px; }
.jPicker.Container .jPicker_box .in_jPicker .jPicker_Params_box { width: 120px; display: inline-block; float: left; padding: 0 0 0 10px; }
.jPicker.Container .jPicker_box .in_jPicker .jPicker_Colors_box { display: none !important; }

.jPicker.Container .jPicker_box .Button {width: 100%; display: block; }

.jPicker div[class="Map"] {
  height: 256px; /* correct to 256px for browsers that support the "[class="xxx"]" selector (IE7+,Firefox,Safari,Chrome,Opera,etc.) */
  width: 256px; /* correct to 256px for browsers that support the "[class="xxx"]" selector (IE7+,Firefox,Safari,Chrome,Opera,etc.) */
}
.jPicker.Container .jPicker_box .in_jPicker .jPicker_Map_box .Map { 
  	border: 1px solid #ccc; cursor: crosshair; height: 256px !important; margin: 0 !important; overflow: hidden; padding: 0 !important; position: relative; width: 256px !important; 
	background: #f3f3f3;}

.jPicker.Container .jPicker_box .in_jPicker .jPicker_Bar_box div.Bar { border: 1px solid #ccc; cursor: n-resize; height: 256px; margin: 0; overflow: hidden; padding: 0px; position: relative; width: 20px; }

.jPicker.Container .jPicker_box .in_jPicker tr.Hue, .jPicker.Container .jPicker_box .in_jPicker tr.Saturation ,.jPicker.Container .jPicker_box .in_jPicker tr.Value { display: none !important; }



.jPicker.Container .jPicker_box table.jPickerParams { width: 100%; }

.jPicker.Container .jPicker_box table.jPickerParams td.Radio { margin: 0; padding: 0; width: 40px; }
.jPicker.Container .jPicker_box table.jPickerParams td.Radio input { display: none !important; }
.jPicker.Container .jPicker_box table.jPickerParams td.Radio label { <%= fine_textShadow(  ) %> font-size: 12px; font-weight: normal; color: rgb(102,102,102); font-style: normal; }

.jPicker.Container .jPicker_box table.jPickerParams td.Text { width: 80px; text-align: left; }
.jPicker.Container .jPicker_box table.jPickerParams td.Text input { width: 72px !important;}

.jPicker.Container .jPicker_box table.jPickerParams td.Unit { display: none !important; }
.jPicker.Container .jPicker_box table.jPickerParams td.Unit input { display: none !important; }


.jPicker.Container .jPicker_box .Button { padding: 0 10px; }


span.jPicker { position: absolute; top: 1px; right: -35px; z-index: 15;}

.jPicker .Icon { display: inline-block; height: 24px; position: relative; text-align: left; width: 25px; }
.jPicker .Icon span.Color, .jPicker .Icon span.Alpha { background-position: 2px 2px; display: block; height: 100%; left: 0px; position: absolute; top: 0px; width: 100%; }
.jPicker .Icon span.Image { background-repeat: no-repeat; cursor: pointer; display: block; height: 100%; left: 0px; position: absolute; top: 0px; width: 100%; }
.jPicker.Container { color: #000; z-index: 99; }

.jPicker .Move { background: transparent; border: 0; cursor: move; height: 20px; padding: 0px; margin: -20px -20px 0; }
.jPicker .Title { font-size: 11px !important; font-weight: bold; margin: -2px 0px 0px 0px; padding: 10px 0px 0px 0px; text-align: center; width: 100%; }

.jPicker .Map .Map1, .jPicker .Map .Map2, .jPicker .Map .Map3, .jPicker .Bar .Map1, .jPicker .Bar .Map2, .jPicker .Bar .Map3, .jPicker .Bar .Map4, .jPicker .Bar .Map5, .jPicker .Bar .Map6 { background-color: transparent; background-image: none; display: block; left: 0px; position: absolute; top: 0px; }

.jPicker .Map .Map1, .jPicker .Map .Map2, .jPicker .Map .Map3 { height: 2596px; width: 256px; }
.jPicker .Bar .Map1, .jPicker .Bar .Map2, .jPicker .Bar .Map3, .jPicker .Bar .Map4 { height: 3896px; width: 20px; }
.jPicker .Bar .Map5, .jPicker .Bar .Map6 { height: 256px; width: 20px; }
.jPicker .Map .Map1, .jPicker .Map .Map2, .jPicker .Bar .Map6 { background-repeat: no-repeat; }
.jPicker .Map .Map3, .jPicker .Bar .Map5 { background-repeat: repeat; }
.jPicker .Bar .Map1, .jPicker .Bar .Map2, .jPicker .Bar .Map3, .jPicker .Bar .Map4 { background-repeat: repeat-x;}

.jPicker .Map .Arrow { display: block; position: absolute; }
.jPicker .Bar .Arrow { display: block; left: 0px; position: absolute; }

.jPicker .Preview { text-align: center; }
.jPicker .Preview div { height: 60px; margin: 0 0 17px; padding: 0; width: 120px; border: solid 1px #ccc; }
.jPicker .Preview div span { border: 0; display: block; height: 30px; margin: 0px auto; padding: 0px; width: 120px; }
.jPicker .Preview .Active { border-bottom-width: 0; }
.jPicker .Preview .Current { border-top-width: 0; cursor: pointer; }



.jPicker.Container .jPicker_box table.jPickerParams td { margin: 0px; padding: 3px 0px !important; }


.jPicker .Grid { display: none !important; }
.jPicker .Grid span.QuickColor { display: none !important; }
