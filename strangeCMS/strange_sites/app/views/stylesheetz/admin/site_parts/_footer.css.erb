#footer_navigation { float:right; } 
footer .right p { text-align:right; }

#fine_footer_nav {float: left;}

#fine_footer_nav .fine_footer_box { float: left; margin:0; padding: 5px 5px; position: relative; z-index: 1;}
#fine_footer_nav .footer_nav_trenner { float: left; margin:0; padding: 5px 5px; color: #369; }

#fine_footer_nav .fine_footer_box a { color: #666; }
#fine_footer_nav .fine_footer_box.aktiv a { color: #369; }
#fine_footer_nav .fine_footer_box a:hover { color: #369; }

#fine_footer_nav .fine_footer_box .footer_subnav { position: absolute; left: 0; top: 42px; z-index: 5; display: none; }
#fine_footer_nav .fine_footer_box .footer_subnav_ecke { position: absolute; left: 0; top: 29px; z-index: 5; display: none; background: transparent url('/images/fineline/footer_ecke.png') top center no-repeat; height: 13px; width: 100%; }
#fine_footer_nav .fine_footer_box.aktiv .footer_subnav { display: block; color: #fff; color: #fff; z-index: 7; }
#fine_footer_nav .fine_footer_box.aktiv .footer_subnav_ecke { display: block; z-index: 7; }

#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links { margin: 0; padding:0; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li { margin: 0; padding:0; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li ul.sub { margin: 0; padding: 0 10px; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li ul.sub li { margin: 0; padding: 0; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li a { margin: 0; padding:0 5px; display:block; color: #999; font-weight: normal; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li a.aktiv { color: #fff; padding:0 10px; <%= fine_textShadow( '1px 1px 0 rgba(0,0,0,.50)' ) %>}

#footer_top { z-index: 1; border: 0; border-top: solid 1px #aaa; border-bottom: solid 1px #aaa; 
	<%= fine_backgroundGradient( '#d1d1d1', '#e9e9e9' ) %> }

#footer_bot { border-top: solid 1px #369; border-bottom: solid 1px #369; z-index: 1;
		<%= fine_Gradient( 'vertikal', 0 => '#2f6592', 67 => '#2f6592', 30 => '#2f6592', 100 => '#174366' ) %> }
		
#footer_bot p.copy { text-align: left; color: rgba(255,255,255,.70); <%= fine_textShadow( '1px 1px 0 rgba(0,0,0,.50)' ) %>}
		


#footer_top a.social_link { width: 30px; height: 30px; display:block; float:left; background: transparent url('/images/fineline/socials_32.png'); opacity: .50;}

#footer_top #fb_link { background-position: -1px -1px; }
#footer_top #tw_link { background-position: -1px -33px; }
#footer_top #gg_link { background-position: -1px -65px; }
#footer_top #rss_link { background-position: -1px -97px; }
#footer_top #fb_link:hover { background-position: -33px -1px; }
#footer_top #tw_link:hover { background-position: -33px -33px; }
#footer_top #gg_link:hover { background-position: -33px -65px; }
#footer_top #rss_link:hover { background-position: -33px -97px; }


#footer_top a.social_link:hover { opacity: 1.00;}