div.fine_table {width: 100%; border-spacing: 0; border: 0; position: relative; display: table; line-height: 29px; background: #fff url('/images/fineline/seitenverwaltung_2x60px.png'); margin: 10px 0;}

div.fine_table .row { position: relative; width: 100%; display: table-row; margin:0; border:0; padding:0; }

div.fine_table .title { width: 60%; padding: 0 5px; display: table-cell; line-height: 30px; margin:0; border:0; padding:0; }
div.fine_table .sorter { position: relative; width: 5%; padding: 0 5px; display: table-cell; margin:0; border:0; padding:0; vertical-align: top;}
div.fine_table .aktiv { width: 5%; padding: 0 5px; display: table-cell; line-height: 30px; margin:0; border:0; padding:0; }
div.fine_table .actions { width:30%; padding: 0 5px; display: table-cell; line-height: 30px; margin:0; border:0; padding:0; }


div.fine_table .row .actions { text-align:right;}
div.fine_table .row .sorter span { visibility:hidden; top:1; margin:0;}
