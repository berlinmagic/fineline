table.settings { width: 100%; margin: 0; padding: 0; text-align: left; }

table.settings th { padding: 5px 10px 5px 0; margin: 0; font-weight: bold; color: #666; position: relative; }
table.settings td { padding: 5px 10px 5px 0; margin: 0; font-weight: normal; color: #444; position: relative; }
table.settings td span.jPicker { position: relative; display: inline-block; right:0; top:0; margin:0; }