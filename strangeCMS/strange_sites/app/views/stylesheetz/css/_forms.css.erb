<% finestyle ||= @finestyle -%>
/* ========================   Formulare   =========================== */
.box.edit_in, .box.edit { padding:0;}
.box.abschnitt-inhalt:hover { padding-top: 16px;}
.box.abschnitt-inhalt:hover .box.edit_in, .box.abschnitt_toolz:hover .box.edit_in { background: #fff;
	-webkit-border-radius: 	<%= finestyle[:edit_box][:radius]  %>; 
	-moz-border-radius: 	<%= finestyle[:edit_box][:radius]  %>; 
	-o-border-radius: 		<%= finestyle[:edit_box][:radius]  %>; 
	-ms-border-radius: 		<%= finestyle[:edit_box][:radius]  %>; 
	border-radius: 			<%= finestyle[:edit_box][:radius]  %>;
	}
.box.edit_in:focus { background: #fff; border: solid 2px #265289;}


#fineline_seite_form { width: 100%; padding: 0; margin: 0; position:relative; display: block; }

#fineline_seite_form_abschnitt_area { margin: 12px -13px 12px -42px; padding: 5px 0 20px; display: block; border: 0; position:relative; 
		background: #fff; border-top: solid 3px #ccc; border-bottom: solid 3px #ccc; }

.abschnitt_box { padding: 25px 13px 0px 42px; position:relative;}

.abschnitt_box .abschnitt_inhalt_box { padding: 10px; border: solid 1px transparent; position:relative;
		-webkit-border-radius: 	<%= finestyle[:edit_box][:radius]  %>; 
		-moz-border-radius: 	<%= finestyle[:edit_box][:radius]  %>; 
		-o-border-radius: 		<%= finestyle[:edit_box][:radius]  %>; 
		-ms-border-radius: 		<%= finestyle[:edit_box][:radius]  %>; 
		border-radius: 			<%= finestyle[:edit_box][:radius]  %>;   }


.abschnitt_box:hover .abschnitt_inhalt_box { border: solid 1px #ccc; background: #f3f3f3; }
.abschnitt_box:focus .abschnitt_inhalt_box { border: solid 1px #336699; background: #f3f3f3; }

.abschnitt_box .abschnitt_inhalt_box span.handle { visibility: hidden; }
.abschnitt_box:hover .abschnitt_inhalt_box span.handle { visibility: visible; }


.abschnitt_box .abschnitt_inhalt_box .abschnitt_admin_toolz { position:absolute; top:-19px; right: 13px; visibility: hidden;}
.abschnitt_box:hover .abschnitt_inhalt_box .abschnitt_admin_toolz { visibility: visible;}
.abschnitt_box .abschnitt_inhalt_box .abschnitt_admin_toolz div { float:right; margin-left: 3px; }
.abschnitt_box .abschnitt_inhalt_box .abschnitt_admin_toolz div a { width: 16px; height: 16px; display:block; }
.abschnitt_box .abschnitt_inhalt_box .abschnitt_admin_toolz div a:hover { opacity: 1; }
.abschnitt_box .abschnitt_inhalt_box .deleted_abschnitt { position:absolute; top:0; right: 7px; display:none; }
.abschnitt_box.geloescht .abschnitt_inhalt_box .deleted_abschnitt { display:block; }

.abschnitt_box .abschnitt_inhalt_box .abschnitt_inhalt_anker_feld {
		position: absolute; top:-24px; left: 13px; line-height: 18px; color: #666;
		margin: 0; padding: 0 5px;
		border: 1px solid #ccc; border-bottom: 0; 
		background: #f3f3f3;
		-webkit-border-top-left-radius: 3px; 	-webkit-border-top-right-radius: 3px;
		-moz-border-radius-topleft: 3px; 		-moz-border-radius-topright: 3px;
		border-top-left-radius: 3px; 			border-top-right-radius: 3px;
		visibility: hidden;
		}

.abschnitt_box .abschnitt_inhalt_box .abschnitt_inhalt_anker_feld span { line-height: 16px; color: #666; padding: 0 10px 0 20px; display: block;
		border: 0; border-right: solid 1px #999; float: left; margin: 3px 0; font-weight: bold;
		background: transparent url('/images/fineline/spezial/anker_16_50.png') 0px 0px no-repeat; }

.abschnitt_box:hover .abschnitt_inhalt_box .abschnitt_inhalt_anker_feld { visibility: visible;}




span.handle { cursor:pointer; width: 18px; height: 34px; 
		background: <%= @button_bg_color_hover %> url('/images/fineline/button_bg/buttonBG_<%= @button_bg_image %>.png'); 
		position: absolute; left: -19px; top: 16px; 
		border: 1px solid rgb(54,104,156); border-right: 0;
		-webkit-border-top-left-radius: 3px; 	-webkit-border-bottom-left-radius: 3px;
		-moz-border-radius-topleft: 3px; 		-moz-border-radius-bottomleft: 3px;
		border-top-left-radius: 3px; 			border-bottom-left-radius: 3px;}

span.handle.smallhandle { width: 18px; height: 20px; top: 0px !important; }



div.remove_nested_forms a { background: transparent; opacity: 1;  margin: 0; padding:0; margin-left:3px;}

div.edit_nested_form a  { background: transparent; opacity: 1;  margin: 0; padding:0; margin-left: 3px;} 

div.edit_admin a { background: transparent; margin: 0; padding:0;  margin-left: 3px;}

div.edit_admin a.hidden { display:none !important; }

.abschnitt_choose_toolz { padding: 0 10px 10px;}

.abschnitt_choose_toolz p { border:0; padding: 0 0 5px;}

.abschnitt_choose_toolz .abschnitt_choose_option { padding: 0 0 5px; } 

p.nested_head {color: #666666; font-size: 15px; font-weight: bold;}

div.no_show { background: #f3f3f3; padding: 5px; margin: 5px -11px;
	border: solid 1px #ccc;
	-webkit-border-radius: 	<%= finestyle[:edit_box][:radius]  %>; 
	-moz-border-radius: 	<%= finestyle[:edit_box][:radius]  %>; 
	-o-border-radius: 		<%= finestyle[:edit_box][:radius]  %>; 
	-ms-border-radius: 		<%= finestyle[:edit_box][:radius]  %>; 
	border-radius: 			<%= finestyle[:edit_box][:radius]  %>;
	-webkit-box-shadow: 	inset 1px 1px 2px 2px rgba(153,153,153,.3); 
	-moz-box-shadow: 		inset 1px 1px 2px 2px rgba(153,153,153,.3); 
	box-shadow: 			inset 1px 1px 2px 2px rgba(153,153,153,.3);
}
div.seiten_einstl { width: 42%; padding: 0 3%;}
div.seiten_einstl .field p { line-height: 24px; }
div.einstll { width:94%; padding: 0 3%;}

div.field.checker_box { padding: 5px 10px; font-size: 15px;}
div.field.checker_box label { padding-left: 0px;}

table { /* width: 100%; */ }
table th { vertical-align: middle; }
table td { padding: 5px 20px; }

input[type='text'], input[type='password'], textarea { 
	font-size: 13px; font-family: Verdana, Arial; color: #666; line-height: 18px; 
	border: solid 1px #ccc; padding: 3px;
	-webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px;
	-webkit-box-shadow: -1px -1px 1px rgba(55,55,55,.6); 
	-moz-box-shadow: -1px -1px 1px rgba(197,197,197,.6); 
	box-shadow: -1px -1px 1px rgba(197,197,197,.6);}

input[type='text'].anker_feld { font-size: 11px; color: #666; line-height: 15px; border: solid 0px transparent; 
	padding: 3px; margin: 0 0 0 5px;
	background:transparent;
	-webkit-box-shadow: none; 
	-moz-box-shadow: none; 
	box-shadow: none; }


input[type='checkbox'] { vertical-align: baseline;}

.field_with_errors input, .field_with_errors textarea { border: solid 1px #cc0000; 
	-webkit-box-shadow: -1px -1px 1px rgba(200,0,0,.7); 
	-moz-box-shadow: -1px -1px 1px rgba(200,0,0,.7); 
	box-shadow: -1px -1px 1px rgba(200,0,0,.7); }


.text-inhalt .nested_form iframe { margin: 0 -6px !important;}

.box.geloescht { background: #efefef url('/images/back.png') left top repeat; opacity: 0.5; }
.box.geloescht .in_box { opacity: 0.7; }







label.inline { padding: 2px 0 0; line-height: 22px; width: 120px !important; 
		display: inline-block; color: #666; font-weight:bold; font-size: 13px; }


#fineline_seite_form input {vertical-align: top;}

.field_with_errors { display: inline-block; vertical-align: top; }

h3.abschnitt_choose_head { color: #336699; font-style: italic; font-weight: bold; font-size: 15px; }



input.seo_field { width: 632px !important; }
textarea.seo_field { width: 632px !important; }
.google_preview { padding: 10px 10px 1px; display: block; font-family: arial, sans-serif; width: 620px; background: #fff; }
.google_preview ol { list-style: none; border: 0px; margin: 0px; padding: 0px; }
.google_preview ol li { margin-bottom: 20px; margin-top: 0px; list-style: none; }
.google_preview ol li.inaktiv { opacity: .50; }
.google_preview ol li div.google_preview_entry { line-height: 1.2; display: inline-block; position: relative; width: 100%; }
.google_preview ol li div.google_preview_entry span h3 { font-size: medium; }
.google_preview ol li div.google_preview_entry span h3 a { color: #2200C1; cursor: pointer; text-decoration: underline; font-size: medium; font-weight: normal;}
.google_preview ol li div.google_preview_entry div.google_domain {display: block; 	margin-bottom: 2px;}
.google_preview ol li div.google_preview_entry div.google_domain cite {color: #0E774A; font-style: normal;	font-family: arial, sans-serif; font-size: small; line-height:  1.2; font-weight: normal;}
.google_preview ol li div.google_preview_entry span.google_text { line-height: 1.24; 	font-family: arial, sans-serif; font-size: small;}
.google_preview em.g_preview { font-style: normal; font-weight: bold; }
.google_preview b {font-weight: bolder;}



.fineline_select, .fineline_select_box, a.fineline_select_trigger {
		-webkit-border-radius: 	<%= finestyle[:fl_select][:radius]  %>; 
		-moz-border-radius: 	<%= finestyle[:fl_select][:radius]  %>; 
		-o-border-radius: 		<%= finestyle[:fl_select][:radius]  %>; 
		-ms-border-radius: 		<%= finestyle[:fl_select][:radius]  %>; 
		border-radius: 			<%= finestyle[:fl_select][:radius]  %>; }

.fineline_select, .fineline_select_box {
		-webkit-box-shadow: 	inset 1px 1px 1px 1px rgba(153,153,153,.3); 
		-moz-box-shadow: 		inset 1px 1px 1px 1px rgba(153,153,153,.3); 
		box-shadow: 			inset 1px 1px 1px 1px rgba(153,153,153,.3); }

.fineline_select { line-height: 16px; padding: 3px; margin: 0; border: solid 1px #aaa; height: 18px; width: 200px; display:block; position:relative; z-index: 3;
	background: #f2f2f2; /* Old browsers */
	background: -moz-linear-gradient(top, #f2f2f2 0%, #ffffff 40%, #ffffff 60%, #f2f2f2 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f2f2f2), color-stop(40%,#ffffff), color-stop(60%,#ffffff), color-stop(100%,#f2f2f2)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #f2f2f2 0%,#ffffff 40%,#ffffff 60%,#f2f2f2 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #f2f2f2 0%,#ffffff 40%,#ffffff 60%,#f2f2f2 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, #f2f2f2 0%,#ffffff 40%,#ffffff 60%,#f2f2f2 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f2f2f2', endColorstr='#f2f2f2',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, #f2f2f2 0%,#ffffff 40%,#ffffff 60%,#f2f2f2 100%); /* W3C */
	}

.fineline_select_box { position: absolute; left:-1px; top:-1px; width:100%; padding: 0px; border: solid 1px #aaa; z-index: 23;
	background: #fff; }

a.fineline_select_trigger { position: absolute; left:-1px; top:-1px; width:100%; padding: 0px; border: solid 1px transparent; z-index: 23; height: 100%; z-index: 4;
			background: transparent url('/images/fineline/spezial/pulldownmenue12px.png') 188px 6px no-repeat; opacity: .42;  }
a.fineline_select_trigger:hover { opacity: .60; border: solid 1px #369; }

.fineline_select_box ul { margin:0; padding: 5px 0; list-style: none;}

.fineline_select_box ul li { margin:0; padding: 0; list-style: none;}

.fineline_select_box ul li a { margin:0; padding: 5px 10px; list-style: none; display:block; color: #369; }

.fineline_select_box ul li.blank a { color: #999; }

.fineline_select_box ul li.level_1 a { color: #444; padding: 5px 20px; }

.fineline_select_box ul li.level_2 a { color: #666; padding: 5px 30px; }

.fineline_select_box ul li a:hover { background: #f3f3f3; }

.fineline_select_text { line-height: 20px; color: #999; font-size: normal; padding: 0 10px;}
.fineline_select_text.selected { color: #444; font-size: bold; }

.toggle_trigger { color: #336699; font-style: italic; font-weight: normal; font-size: 13px; padding: 3px 18px; margin:0; display:block; font-style: italic; line-height: 18px;
		background: transparent url('/images/fineline/spezial/closed_pulldown.png') 0px 3px no-repeat; cursor: pointer;	}
.toggle_trigger.aktiv { background: transparent url('/images/fineline/spezial/pulldown.png') 0px 3px no-repeat; }
.toggle_trigger:hover { color: #666666; font-weight: bold; }

h3.toggle_trigger { color: #336699; font-style: italic; font-weight: bold; font-size: 15px; padding: 3px 18px; margin:0; display:block; font-style: italic; line-height: 20px;
		background: transparent url('/images/fineline/spezial/closed_pulldown.png') 0px 5px no-repeat; cursor: pointer;	}
h3.toggle_trigger.aktiv { background: transparent url('/images/fineline/spezial/pulldown.png') 0px 5px no-repeat; }
h3.toggle_trigger:hover { color: #666666; font-weight: bold; }
h3.toggle_trigger small { font-weight: normal; color: #666; }

p.group_label { color: #444; font-weight:bold; font-style: italic; font-size: 13px; padding: 5px 0 10px; }



.field { padding: 5px 0; }
label { padding: 2px 0 0; line-height: 22px; display: inline-block; color: #666; font-weight:bold; font-size: 13px; }
input[type='checkbox'] { vertical-align: top; margin: 6px 7px 0 0; }

.toggle_field { padding: 0 0 15px; display: block; margin: 0; }

#error_explanation { padding: 20px 60px; margin: 0 -15px 15px; background: rgba(204,0,0,.1) url('/images/fehler_icon.png') 15px 17px no-repeat; 
border: solid 1px rgb(204,0,0); -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px; }
