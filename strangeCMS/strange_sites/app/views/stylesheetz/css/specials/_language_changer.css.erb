/********	 language-changer    *****************************************************/
ul#language-bar { list-style-type: none; margin: 0px; padding: 0px; display: inline; }
ul#language-bar li { margin: 0px; padding: 0px; display: inline; }
ul#language-bar strong { font-weight: normal; }
ul#language-bar li#parent ul { display: none; margin: 0px; padding: 5px 10px 5px; }
ul#language-bar li#parent strong { color: #444; text-decoration: none; }
ul#language-bar li#parent ul { display: block; }
ul#language-bar li#parent a { margin: 4px 2px 0px 0px; }
ul#language-bar a { display: block; height: 13px; width: 20px; opacity: .50; border: solid 1px transparent; }
ul#language-bar a:hover { opacity: 1; border: solid 1px #607890; }
ul#language-bar a.aktiv { opacity: .9; }
ul#language-bar li { display: block; float: left; margin-right: 2px; }
ul#language-bar a#de { background: url(/images/flags/de.jpg) no-repeat; }
ul#language-bar a#en { background: url(/images/flags/en.jpg) no-repeat; }