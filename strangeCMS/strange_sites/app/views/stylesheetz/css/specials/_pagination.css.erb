/********	Pagination	*****************************************************/
.paginator_wrapper { position: relative; <%= fine_box_css( 'finePagination', 'front', '' ) %> }
.paginator_wrapper:hover { <%= fine_box_css( 'finePagination', 'front', 'hover' ) %> }
.paginator_wrapper:active { <%= fine_box_css( 'finePagination', 'front', 'active' ) %> }

.paginator_wrapper .pagination { <%= fine_boxShadow( ) %> }
.paginator_wrapper .pagination p { display: inline-block; <%= fine_font_style( 'p' ) %> }

.pagination { padding: 0; margin:0; display:block; float: right; position: relative; }

.viewChangeButtons { padding: 0; margin:0; display:block; position: relative; float:left; z-index: 2; }


<% hg = finestyler( 'PaginationNavButton_icon_size', 'front' ).to_i < finestyler( 'PaginationViewButton_icon_size', 'front' ).to_i ? finestyler( 'PaginationViewButton_icon_size', 'front' ).to_i : finestyler( 'PaginationNavButton_icon_size', 'front' ).to_i %>


.pagination span a, .pagination span.current { display: inline-block; text-align: center; line-height: <%= hg %>px; }

