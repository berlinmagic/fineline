#BreadBox { position: relative; <%= fine_box_css( 'finePagination', 'front', '' ) %> max-width: 950px !important; }
#BreadBox:hover { <%= fine_box_css( 'finePagination', 'front', 'hover' ) %> }
#BreadBox:active { <%= fine_box_css( 'finePagination', 'front', 'active' ) %> }

#BreadBox  ul
{
	margin: 0;
	padding: 0;
	height: 21px;
	display: block;
}
#BreadBox  ul li
{
	display: block;
	float: left;
	position: relative;
	height: 21px;
	overflow: hidden;
	line-height: 21px;
	margin: 0px 6px 0px 0;
	padding: 0px 10px 0px 0;
	font-size: .9167em;
	background: url(/images/Chevron.gif) no-repeat 100% 0;
}
#BreadBox  ul li div.chevronOverlay
{
	position: absolute;
	right: 0;
	top: 0;
	z-index: 2;
}
#BreadBox  ul li span
{
	display: block;
	overflow: hidden;
}
#BreadBox  ul li a
{
	display: block;
	position: relative;
	height: 21px;
	line-height: 21px;
	overflow: hidden;
	float: left;
}
