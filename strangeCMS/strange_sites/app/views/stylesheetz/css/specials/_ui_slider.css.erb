/* ========================================   horizontal - Regler  ======================================================= */
.ui-slider.ui-slider-horizontal {  <%= fine_borderRadius( '5px' ) %> }

.ui-slider { position: relative; text-align: left; }
.ui-slider .ui-slider-handle { position: absolute; z-index: 2; width: 14px; height: 14px; cursor: default; <%= fine_borderRadius( '7px' ) %> border: solid 1px #336699; }
.ui-slider .ui-slider-range { position: absolute; z-index: 1; font-size: .7em; display: block; border: 0; background-position: 0 0; }

.ui-slider-horizontal { height: 5px; background: #ccc; <%= fine_boxShadow( 'inset 3px 3px 3px 0 rgba(0,0,0,.5)' ) %>}
.ui-slider-horizontal .ui-slider-handle { top: -5px; margin-left: -7px; <%= fine_backgroundGradient( '#4786bb', '#336699' ) %> <%= fine_boxShadow( 'inset 1px 1px 1px 0px rgba(255,255,255,.4)' ) %> }
.ui-slider-horizontal .ui-slider-handle:hover { <%= fine_backgroundGradient( '#3a7ab0', '#082f55' ) %> }
.ui-slider-horizontal .ui-slider-handle:active { <%= fine_backgroundGradient( '#3a7ab0', '#082f55' ) %>
<%= fine_boxShadow( 'inset 1px 1px 1px rgba(8,47,85,.6)' ) %>  }
.ui-slider-horizontal .ui-slider-range { top: 0; height: 100%; }
.ui-slider-horizontal .ui-slider-range-min { left: 0; }
.ui-slider-horizontal .ui-slider-range-max { right: 0; }