div.fineline_table {width: 100%; border-spacing: 0; border: 0; position: relative; display: table; line-height: 29px; }
div.fineline_table .row { position: relative; width: 100%; display: table-row; }
div.fineline_table .sorter { width: 5%; padding: 2px 5px; display: table-cell; }
div.fineline_table .first { width: 30%; padding: 10px 5px; display: table-cell; }
div.fineline_table .second { width: 30%; padding: 10px 5px; display: table-cell; }
div.fineline_table .aktiv { width: 5%; padding: 10px 5px; display: table-cell; }
div.fineline_table .actions { width:30%; padding: 10px 5px; display: table-cell; }
div.fineline_table .row .actions { text-align:right;}
div.fineline_table .row .sorter span { visibility:hidden;}
div.fineline_table .row .actions > * { visibility:hidden; }
div.fineline_table .row:hover { background: rgba(5,230,30,.2); }
div.fineline_table .row:hover .actions > * { visibility:visible; }
div.fineline_table .row:hover .sorter span { visibility:visible;}
div.fineline_table .sorter span.handler { cursor:pointer; width: 22px; background: transparent url('/images/schieber_k.png'); height: 22px; position:relative; display:block; left:0; top:5px; vertical-align: center;}

div.fineline_table .row .unter_seiten {width: 90%; border-spacing: 0; border: 0; position: relative; display: table; }
div.fineline_table .row .unter_seiten .u_row { position: relative; width: 100%; display: table-row; }
div.fineline_table .row .unter_seiten .u_row > * {display: table-cell; vertical-align: top;}
