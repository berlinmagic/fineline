/* =====================================   Shared   =================================== */

.hidden { display: none !important; visibility: hidden !important; }

img.fineline_icon_pic {vertical-align: top;}


.trenn_linie { height: 0px; border-top: solid 1px #ccc; border-bottom: solid 1px #fff; margin: 0; padding:0; }

.kasten { width: 990px; margin: 0 auto; position: relative; text-align:left; }

/* =====================================   Admin-Area   =================================== */
#user_area { width: 100%; background: #333; position: relative; }

#fineAdminExit, #fineAdminEnter { padding: 0 20px 0 10px; margin: 10px 0; font-size:13px; font-weight: normal; display:block; }
#fineAdminExit:hover { border: solid 1px #369; }
#fineAdminExit .finelineIcon, #fineAdminEnter .finelineIcon { margin: 1px 10px 1px 0; }

#strange_admin_button { padding: 0 10px; border: solid 1px #ccc; margin: 10px 0; background: #fff; line-height: 20px;
		<%= fine_borderRadius( '2px' ) %>  color: #444; display:block; float:left;} 
#strange_admin_button.admin_area { background: #336699; }
#strange_admin_button:hover { background: #de9f42 url('/images/strange_admin_button_bg_o.png') repeat-x; color: #000; }


#login_area { margin: 11px 5px; color: #f3f3f3; line-height: 20px; display:inline-block; }

#finelineLogout { padding: 0 10px; background: #000; line-height: 20px; <%= fine_borderRadius( '3px' ) %>  color: #999;  display:inline-block; margin:10px 0; }
#finelineLogout:hover { color: #fff;}
.right_user_nav { float: right; }

/* =====================================   Top   =================================== */
#fine_header { position: relative;
	<%= fine_backgroundGradient('#ffffff','#cccccc') %>
	border: 0;
	/* border-top: 1px solid #cccccc; 
	border-bottom: 1px solid rgba(0,0,0,.6);*/
	}
#fineLOGO { padding: 10px 0; display:block; min-height: 20px; max-height: 60px; max-width: 310px; }
#fineLOGO img { vertical-align: middle; }
#header_navigation { position:absolute; bottom:0; right:0; height: 40px; text-align:right; float:right; list-style: none; border:0; }
#header_navigation ul { position:relative; text-align:right; list-style: none; border:0; margin:0; padding: 0;}
#header_navigation ul li { display:inline; float:left; margin:0; padding:0; border:0; position:relative; }
#header_navigation ul li a { display:block; padding:10px; color: rgb(102,102,102); font-size: 14px; position:relative; z-index:101;}
#header_navigation ul li.fine_login a { padding: 8px; }
#header_navigation ul li a:hover, #header_navigation li a.aktiv { color: #369; }
#header_navigation ul li.nav_aktiv { background: transparent url('/images/fineline/navi/eckenavi_black80.png') center bottom no-repeat; }
#finelineLogin { display:block; background: transparent; border:0;}
#finelineLogin:hover .finelineIcon { opacity: .9 !important;}


#header_navigation ul div.fineHoverBox{
border:0;
background: transparent url('/images/fineline/navi/eckenavi_black80.png') center bottom no-repeat;
<%= fine_boxShadow('rgba(0,0,0,.5) 0 1px 0 0') %>
position:absolute;
z-index:100;
}



/* =====================================   Banner   =================================== */

#fine_banner_box { width: 100%;  overflow: hidden; background: transparent; position:relative;}
#banner {min-height: 34px; width: 100%;  position: relative; z-index:1; overflow: hidden;
	 /* background: #073768 url('/images/strange_banner_bg.jpg') repeat-x;
	<%#= fine_backgroundGradient('#003366', '#00213f') %> */
	
	background: transparent; 	}

#banner #main_nav_holder { min-height: 34px; }

#banner img { margin: 0 auto; }


#bread { padding: 10px 0 0; background: #fff; border-bottom: solid 1px #ccc; }

/* =====================================   Main   =================================== */
#main { /*background: #e5e5e5;*/ padding: 10px 0; min-height: 420px;
		<%= fine_backgroundGradient( '#f3f3f3', '#ffffff' ) %> }
		


/* =====================================   Footer   =================================== */
footer { min-height: 105px; width: 100%; /*background: #d9d9d9 url('/images/strange_footer_bg.jpg') repeat-x;*/ position: relative; 
	background: #f3f3f3; }
#footer_navigation { float:right; } 
footer .right p { text-align:right; }

#fine_footer_nav {float: left;}

#fine_footer_nav .fine_footer_box { float: left; margin:0; padding: 5px 5px; position: relative; z-index: 1;}
#fine_footer_nav .footer_nav_trenner { float: left; margin:0; padding: 5px 5px; color: #369; }

#fine_footer_nav .fine_footer_box a { color: #666; }
#fine_footer_nav .fine_footer_box.aktiv a { color: #369; }
#fine_footer_nav .fine_footer_box a:hover { color: #369; }

#fine_footer_nav .fine_footer_box .footer_subnav { position: absolute; left: 0; top: 42px; z-index: 5; display: none; }
#fine_footer_nav .fine_footer_box .footer_subnav_ecke { position: absolute; left: 0; top: 29px; z-index: 5; display: none; background: transparent url('/images/fineline/footer_ecke.png') top center no-repeat; height: 13px; width: 100%; }
#fine_footer_nav .fine_footer_box.aktiv .footer_subnav { display: block; color: #fff; color: #fff; z-index: 7; }
#fine_footer_nav .fine_footer_box.aktiv .footer_subnav_ecke { display: block; z-index: 7; }

#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links { margin: 0; padding:0; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li { margin: 0; padding:0; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li ul.sub { margin: 0; padding: 0 10px; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li ul.sub li { margin: 0; padding: 0; list-style: none; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li a { margin: 0; padding:0 5px; display:block; color: #999; font-weight: normal; }
#fine_footer_nav .fine_footer_box .footer_subnav #footer_subnav_links li a.aktiv { color: #fff; padding:0 10px; <%= fine_textShadow( '1px 1px 0 rgba(0,0,0,.50)' ) %>}

#footer_top { z-index: 1; border: 0; border-top: solid 1px #aaa; border-bottom: solid 1px #aaa; 
	<%= fine_backgroundGradient( '#d1d1d1', '#e9e9e9' ) %> }

#footer_bot { border-top: solid 1px #369; border-bottom: solid 1px #369; z-index: 1;
		<%= fine_Gradient( 'vertikal', 0 => '#2f6592', 67 => '#2f6592', 30 => '#2f6592', 100 => '#174366' ) %> }
		
#footer_bot p.copy { text-align: left; color: rgba(255,255,255,.70); <%= fine_textShadow( '1px 1px 0 rgba(0,0,0,.50)' ) %>}
		


#footer_top a.social_link { width: 30px; height: 30px; display:block; float:left; background: transparent url('/images/fineline/socials_32.png'); opacity: .50;}

#footer_top #fb_link { background-position: -1px -1px; }
#footer_top #tw_link { background-position: -1px -33px; }
#footer_top #gg_link { background-position: -1px -65px; }
#footer_top #rss_link { background-position: -1px -97px; }
#footer_top #fb_link:hover { background-position: -33px -1px; }
#footer_top #tw_link:hover { background-position: -33px -33px; }
#footer_top #gg_link:hover { background-position: -33px -65px; }
#footer_top #rss_link:hover { background-position: -33px -97px; }


#footer_top a.social_link:hover { opacity: 1.00;}

