<% finestyle ||= @finestyle -%>
/* =====================================   Shared   =================================== */

.hidden { display: none !important; visibility: hidden !important; }

img.fineline_icon_pic {vertical-align: top;}


.trenn_linie { height: 0px; border-top: solid 1px #aaa; border-bottom: solid 1px #fff; margin: 0; padding:0; }

.kasten { width: 990px; margin: 0 auto; position: relative; text-align:left; }

/* =====================================   Admin-Area   =================================== */
#user_area { width: 100%; background: #333; position: relative; }

#fineAdminExit, #fineAdminEnter { padding: 0 20px 0 10px; margin: 10px 0; font-size:13px; font-weight: normal; }
#fineAdminExit:hover { border: solid 1px #369; }
#fineAdminExit .finelineIcon, #fineAdminEnter .finelineIcon { margin: 1px 10px 1px 0; }

#strange_admin_button { padding: 0 10px; border: solid 1px #ccc; margin: 10px 0; background: #fff; line-height: 20px;
		-webkit-border-radius: 2px; -moz-border-radius: 2px; border-radius: 2px;  color: #444; display:block; float:left;} 
#strange_admin_button.admin_area { background: #336699; }
#strange_admin_button:hover { background: #de9f42 url('/images/strange_admin_button_bg_o.png') repeat-x; color: #000; }


#login_area { margin: 11px 5px; color: #f3f3f3; line-height: 20px; display:inline-block; }

#finelineLogout { padding: 0 10px; background: #000; line-height: 20px; -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px;  color: #999;  display:inline-block; margin:10px 0; }
#finelineLogout:hover { color: #fff;}
.right_user_nav { float: right; }

/* =====================================   Top   =================================== */
#fine_header { position: relative; 
	background: #ffffff;
	background: -moz-linear-gradient(top, #ffffff 0%, #cccccc 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(100%,#cccccc));
	background: -webkit-linear-gradient(top, #ffffff 0%,#cccccc 100%);
	background: -o-linear-gradient(top, #ffffff 0%,#cccccc 100%);
	background: -ms-linear-gradient(top, #ffffff 0%,#cccccc 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#cccccc',GradientType=0 );
	background: linear-gradient(top, #ffffff 0%,#cccccc 100%);
	border: 0;
	/* border-top: 1px solid #cccccc; 
	border-bottom: 1px solid rgba(0,0,0,.6);*/
	}
#fineLOGO { padding: 10px 0; display:block; min-height: 20px; max-height: 60px; max-width: 310px; }
#fineLOGO img { vertical-align: middle; }
#header_navigation { position:absolute; bottom:0; right:0; min-height: 38px; text-align:right; float:right; list-style: none; border:0; }
#header_navigation li { display:inline; float:left; margin:0; padding:5px; border:0; }
#header_navigation li.fine_login { padding: 2px 5px;}
#header_navigation li a { display:block; padding:5px; color: rgb(102,102,102); font-size: 14px; }
#header_navigation li a:hover, #header_navigation li a.aktiv { color: #369; }
#header_navigation li.aktiv { background: transparent url('/images/fineline/navi/eckenavi_black60.png') center bottom no-repeat; }
#finelineLogin { display:block; background: transparent; padding: 0; border:0;}
#finelineLogin:hover .finelineIcon { opacity: .9 !important;}


/* =====================================   Banner   =================================== */
#banner {min-height: 34px; width: 100%;  position: relative; z-index:1;
	 /* background: #073768 url('/images/strange_banner_bg.jpg') repeat-x; */
	background: #001f46;
	background: -moz-linear-gradient(top, #001f46 0%, #003366 0%, #00213f 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#001f46), color-stop(0%,#003366), color-stop(100%,#00213f));
	background: -webkit-linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	background: -o-linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	background: -ms-linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#001f46', endColorstr='#00213f',GradientType=0 );
	background: linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	-moz-box-shadow: 		inset 0 7px 5px 0 rgba(0,0,0,.3);
	-webkit-box-shadow: 	inset 0 7px 5px 0 rgba(0,0,0,.3);
	box-shadow: 			inset 0 7px 5px 0 rgba(0,0,0,.3);		}

#banner .kasten { min-height: 34px; }



#bread { padding: 10px 0 0; background: #fff; border-bottom: solid 1px #ccc; }

/* =====================================   Main   =================================== */
#main { /*background: #e5e5e5;*/ padding: 10px 0; min-height: 420px;
		background: #f3f3f3; /* Old browsers */
		background: -moz-linear-gradient(top, #f3f3f3 0%, #f3f3f3 6%, #ffffff 56%, #ffffff 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f3f3f3), color-stop(6%,#f3f3f3), color-stop(56%,#ffffff), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f3f3f3', endColorstr='#ffffff',GradientType=0 ); /* IE6-9 */
		background: linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* W3C */   	}
		
#main #content { width: 762px; float:left; }

/* =====================================   Footer   =================================== */
footer { min-height: 105px; width: 100%; /*background: #d9d9d9 url('/images/strange_footer_bg.jpg') repeat-x;*/ position: relative; 
	background: #f3f3f3; 
	text-shadow: 			<%= finestyle[:footer][:shaddow]  %>;
	-o-text-shadow: 		<%= finestyle[:footer][:shaddow]  %>; 
	-webkit-text-shadow: 	<%= finestyle[:footer][:shaddow]  %>; 
	-moz-text-shadow: 		<%= finestyle[:footer][:shaddow]  %>;
	-ms-text-shadow: 		<%= finestyle[:footer][:shaddow]  %>;
	}
#footer_navigation { float:right; } 
footer .right p { text-align:right; }

#fine_footer_nav {float: right;}

#fine_footer_nav .fine_footer_box { float: left; margin:0; padding: 2px 15px; border-left: 1px solid #999; }
#fine_footer_nav .fine_footer_box:first-child { border:0; }
#fine_footer_nav .fine_footer_box:last-child { padding-right:0px; }
