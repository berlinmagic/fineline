<% finestyle ||= @finestyle -%>
/* =====================================   Shared   =================================== */

.hidden { display: none !important; visibility: hidden !important; }

img.fineline_icon_pic {vertical-align: top;}


.trenn_linie { height: 0px; border-top: solid 1px #aaa; border-bottom: solid 1px #fff; margin: 0; padding:0; }

.kasten { width: 990px; margin: 0 auto; position: relative; text-align:left; }

/* =====================================   Admin-Area   =================================== */
#user_area { height: 45px; width: 100%; background: #333; position: relative; }

#strange_admin_button { padding: 1px 10px; border: solid 1px #ccc; margin: 0; background: #fff; line-height: 20px;
		-webkit-border-radius: 2px; -moz-border-radius: 2px; border-radius: 2px;  color: #444; display:block; margin-top:11px; float:left;} 
#strange_admin_button:hover { background: #de9f42 url('/images/strange_admin_button_bg_o.png') repeat-x; color: #000; }


#login_area { margin-top: 11px; color: #f3f3f3; line-height: 24px; display:inline-block; vertical-align: top;}

#strange_user_button { 	padding: 1px 10px; border: solid 1px #000; margin: 0; background: #000; line-height: 20px; vertical-align: top;
		-webkit-border-radius: 2px; -moz-border-radius: 2px; border-radius: 2px;  color: #fff; display: inline-block; margin-top:11px;}
		
#strange_user_button:hover { border: solid 1px #b1b1b1; background: #b1b1b1; -webkit-box-shadow: -1px -1px 2px rgba(50,50,50,.7); color: #003366;}
.right_user_nav { float: right; }

/* =====================================   Top   =================================== */
#top_area { height: 39px; width: 100%; position: relative; 
	background: #f5f7f9; /* Old browsers */
	background: -moz-linear-gradient(top, #f5f7f9 0%, #f6f8f9 4%, #d0d3cb 49%, #dce0e2 52%, #f6f8f9 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f5f7f9), color-stop(4%,#f6f8f9), color-stop(49%,#d0d3cb), color-stop(52%,#dce0e2), color-stop(100%,#f6f8f9)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #f5f7f9 0%,#f6f8f9 4%,#d0d3cb 49%,#dce0e2 52%,#f6f8f9 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #f5f7f9 0%,#f6f8f9 4%,#d0d3cb 49%,#dce0e2 52%,#f6f8f9 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, #f5f7f9 0%,#f6f8f9 4%,#d0d3cb 49%,#dce0e2 52%,#f6f8f9 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f5f7f9', endColorstr='#f6f8f9',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, #f5f7f9 0%,#f6f8f9 4%,#d0d3cb 49%,#dce0e2 52%,#f6f8f9 100%); /* W3C */
	border: 0;
	border-top: 1px solid #cccccc;
	border-bottom: 1px solid #cccccc;
	}
#top_area #strange_LOGO { height: 39px; float:left; width:150px; display:block; }
#top_area #strange_LOGO img { vertical-align:middle; margin: 11px 0;}
#top_area #head_navigation { float:right; display:block; margin-top: 12px; }
#top_area #head_navigation a { padding: 2px 7px 4px; border: 0; border-top: solid 1px transparent; border-left: solid 1px transparent; color: #444;}
#top_area #head_navigation a.aktiv, #top_area #head_navigation a:hover { background: #ccc url('/images/strange_head_button_bg.png') repeat-x;
border: 0; border-top: solid 1px rgba(50,50,50,.9); border-left: solid 1px rgba(50,50,50,.9); -webkit-box-shadow: -1px -1px 2px rgba(50,50,50,1); color: #fff;}
#top_area #head_navigation #strange_login_button { width: 18px; height: 18px; display:block; background: transparent url('/images/btns/lock.png') right top no-repeat; padding: 0; float:right; margin-left: 5px; border:0;}
#top_area #head_navigation #strange_login_button:hover { background: transparent url('/images/btns/lock.png') left top no-repeat; border:0; -webkit-box-shadow:none;}

/* =====================================   Banner   =================================== */
#banner {min-height: 34px; width: 100%; background: #073768 url('/images/strange_banner_bg.jpg') repeat-x; position: relative; z-index:1;}
#banner .kasten { min-height: 34px; }

/* =====================================   Main   =================================== */
#main { /*background: #e5e5e5;*/ padding: 10px 0; min-height: 420px;
		background: #f3f3f3; /* Old browsers */
		background: -moz-linear-gradient(top, #f3f3f3 0%, #f3f3f3 6%, #ffffff 56%, #ffffff 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f3f3f3), color-stop(6%,#f3f3f3), color-stop(56%,#ffffff), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f3f3f3', endColorstr='#ffffff',GradientType=0 ); /* IE6-9 */
		background: linear-gradient(top, #f3f3f3 0%,#f3f3f3 6%,#ffffff 56%,#ffffff 100%); /* W3C */   	}
		
#main #content { width: 762px; float:left; }

/* =====================================   Footer   =================================== */
footer { min-height: 105px; width: 100%; /*background: #d9d9d9 url('/images/strange_footer_bg.jpg') repeat-x;*/ position: relative; 
	background: #f3f3f3; 
	text-shadow: 			<%= finestyle[:footer][:shaddow]  %>;
	-o-text-shadow: 		<%= finestyle[:footer][:shaddow]  %>; 
	-webkit-text-shadow: 	<%= finestyle[:footer][:shaddow]  %>; 
	-moz-text-shadow: 		<%= finestyle[:footer][:shaddow]  %>;
	-ms-text-shadow: 		<%= finestyle[:footer][:shaddow]  %>;
	}
#footer_navigation { float:right; } 
footer .right p { text-align:right; }

#fine_footer_nav {float: right;}

#fine_footer_nav .fine_footer_box { float: left; margin:0; padding: 2px 15px; border-left: 1px solid #999; }
#fine_footer_nav .fine_footer_box:first-child { border:0; }
#fine_footer_nav .fine_footer_box:last-child { padding-right:0px; }
