<% finestyle ||= @finestyle -%>
/* =====================================   Shared   =================================== */

.hidden { display: none !important; visibility: hidden !important; }

img.fineline_icon_pic {vertical-align: top;}


.trenn_linie { height: 0px; border-top: solid 1px #ccc; border-bottom: solid 1px #fff; margin: 0; padding:0; }

.kasten { width: 990px; margin: 0 auto; position: relative; text-align:left; }

/* =====================================   Admin-Area   =================================== */
#user_area { width: 100%; background: #333; position: relative; }

#fineAdminExit, #fineAdminEnter { padding: 0 20px 0 10px; margin: 10px 0; font-size:13px; font-weight: normal; display:block; }
#fineAdminExit:hover { border: solid 1px #369; }
#fineAdminExit .finelineIcon, #fineAdminEnter .finelineIcon { margin: 1px 10px 1px 0; }

#strange_admin_button { padding: 0 10px; border: solid 1px #ccc; margin: 10px 0; background: #fff; line-height: 20px;
		-webkit-border-radius: 2px; -moz-border-radius: 2px; border-radius: 2px;  color: #444; display:block; float:left;} 
#strange_admin_button.admin_area { background: #336699; }
#strange_admin_button:hover { background: #de9f42 url('/images/strange_admin_button_bg_o.png') repeat-x; color: #000; }


#login_area { margin: 11px 5px; color: #f3f3f3; line-height: 20px; display:inline-block; }

#finelineLogout { padding: 0 10px; background: #000; line-height: 20px; -webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px;  color: #999;  display:inline-block; margin:10px 0; }
#finelineLogout:hover { color: #fff;}
.right_user_nav { float: right; }

/* =====================================   Top   =================================== */
#fine_header { position: relative;
	<%= fine_backgroundGradient('#ffffff','#cccccc') %>
	border: 0;
	/* border-top: 1px solid #cccccc; 
	border-bottom: 1px solid rgba(0,0,0,.6);*/
	}
#fineLOGO { padding: 10px 0; display:block; min-height: 20px; max-height: 60px; max-width: 310px; }
#fineLOGO img { vertical-align: middle; }
#header_navigation { position:absolute; bottom:0; right:0; height: 40px; text-align:right; float:right; list-style: none; border:0; }
#header_navigation ul { position:relative; text-align:right; list-style: none; border:0; margin:0; padding: 0;}
#header_navigation ul li { display:inline; float:left; margin:0; padding:0; border:0; position:relative; }
#header_navigation ul li a { display:block; padding:10px; color: rgb(102,102,102); font-size: 14px; position:relative; z-index:101;}
#header_navigation ul li.fine_login a { padding: 8px; }
#header_navigation ul li a:hover, #header_navigation li a.aktiv { color: #369; }
#header_navigation ul li.nav_aktiv { background: transparent url('/images/fineline/navi/eckenavi_black80.png') center bottom no-repeat; }
#finelineLogin { display:block; background: transparent; border:0;}
#finelineLogin:hover .finelineIcon { opacity: .9 !important;}


#header_navigation ul div.fineHoverBox{
border:0;
background: transparent url('/images/fineline/navi/eckenavi_black80.png') center bottom no-repeat;
<%= fine_boxShadow('rgba(0,0,0,.5) 0 1px 0 0') %>
position:absolute;
z-index:100;
}



/* =====================================   Banner   =================================== */
#banner {min-height: 34px; width: 100%;  position: relative; z-index:1; overflow: hidden;
	 /* background: #073768 url('/images/strange_banner_bg.jpg') repeat-x; */
	background: #001f46;
	background: -moz-linear-gradient(top, #001f46 0%, #003366 0%, #00213f 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#001f46), color-stop(0%,#003366), color-stop(100%,#00213f));
	background: -webkit-linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	background: -o-linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	background: -ms-linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#001f46', endColorstr='#00213f',GradientType=0 );
	background: linear-gradient(top, #001f46 0%,#003366 0%,#00213f 100%);
	-moz-box-shadow: 		inset 0 7px 5px 0 rgba(0,0,0,.3);
	-webkit-box-shadow: 	inset 0 7px 5px 0 rgba(0,0,0,.3);
	box-shadow: 			inset 0 7px 5px 0 rgba(0,0,0,.3);		}

#banner #main_nav_holder { min-height: 34px; }

#banner img { margin: 0 auto; }


#bread { padding: 10px 0 0; background: #fff; border-bottom: solid 1px #ccc; }

