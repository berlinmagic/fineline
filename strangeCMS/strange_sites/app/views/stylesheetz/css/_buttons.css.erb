<% finestyle ||= @finestyle -%>
/* ================ 	Buttons		  ================ */
#btn_edit {  width: 16px; height: 16px; position:absolute; top:0; 
		background: transparent url('/images/btns/bearbeiten_16px.png') 0px 0px no-repeat; right: 36px; display:block; opacity: .5;}
#btn_edit:hover { opacity: 1; }
#btn_del {  width: 16px; height: 16px; position:absolute; top:0; 
		background: transparent url('/images/btns/loeschen_16px.png') 0px 0px no-repeat; right: 15px; display:block; opacity: .5;}
#btn_del:hover { opacity: 1; }


.fineline_button { 
	min-width: 16px; min-height: 16px; 
	padding: 0; border: solid 1px transparent; 
	position:relative; display:inline-block;
	background: <%= finestyle[:button][:bg_color]  %> url('/images/fineline/button_bg/buttonBG_<%= finestyle[:button][:bg_image]  %>.png') 
	left center repeat-x;
	-webkit-border-radius: 	<%= finestyle[:button][:radius] %>; 
	-moz-border-radius: 	<%= finestyle[:button][:radius] %>; 
	-o-border-radius: 		<%= finestyle[:button][:radius] %>; 
	-ms-border-radius: 		<%= finestyle[:button][:radius] %>; 
	border-radius: 			<%= finestyle[:button][:radius] %>;
	
	-moz-box-shadow: 		<%= finestyle[:button][:box_shaddow] %>;
	-webkit-box-shadow: 	<%= finestyle[:button][:box_shaddow] %>;
	box-shadow: 			<%= finestyle[:button][:box_shaddow] %>;		}

.fineline_button img, .fineline_button a img { vertical-align: top !important; padding:0 !important; margin:0 !important;}

.fineline_button, .fineline_button a { 
	line-height: 16px; font-weight:normal; color: #fefefe; 
	text-shadow: 			<%= finestyle[:button][:text_shaddow] %>;
	-o-text-shadow: 		<%= finestyle[:button][:text_shaddow] %>;
	-webkit-text-shadow: 	<%= finestyle[:button][:text_shaddow] %>; 
	-moz-text-shadow: 		<%= finestyle[:button][:text_shaddow] %>;
	-ms-text-shadow: 		<%= finestyle[:button][:text_shaddow] %>;		}

.fineline_button:hover, a:hover .fineline_button { 
	background: <%= finestyle[:button][:bg_color_hover]  %> url('/images/fineline/button_bg/buttonBG_<%= finestyle[:button][:bg_image]  %>.png') 
	left center repeat-x;
	-moz-box-shadow: 		<%= finestyle[:button][:box_shaddow_hover] %>;
	-webkit-box-shadow: 	<%= finestyle[:button][:box_shaddow_hover] %>;
	box-shadow: 			<%= finestyle[:button][:box_shaddow_hover] %>;		}

.fineline_button:active, a:active .fineline_button { 
	background: <%= finestyle[:button][:bg_color_click]  %> url('/images/fineline/button_bg/buttonBG_<%= finestyle[:button][:bg_image]  %>.png') 
	left center repeat-x;
	-moz-box-shadow: 		<%= finestyle[:button][:box_shaddow_click] %>;
	-webkit-box-shadow: 	<%= finestyle[:button][:box_shaddow_click] %>;
	box-shadow: 			<%= finestyle[:button][:box_shaddow_click] %>;		}

.fineline_button:hover, .fineline_button:hover a {
	color: #666666;
	text-shadow: 			<%= finestyle[:button][:text_shaddow_hover]  %>;
	-o-text-shadow: 		<%= finestyle[:button][:text_shaddow_hover]  %>; 
	-webkit-text-shadow: 	<%= finestyle[:button][:text_shaddow_hover]  %>; 
	-moz-text-shadow: 		<%= finestyle[:button][:text_shaddow_hover]  %>;
	-ms-text-shadow: 		<%= finestyle[:button][:text_shaddow_hover]  %>;		}

a.big_button {   float:left; padding: 7px 20px 7px; margin: 5px 5px 5px 5px; color: #444; font-weight: bold; font-size: 15px;
		border: solid 1px #777; 
		-webkit-border-radius: 	<%= finestyle[:big_button][:radius]  %>; 
		-moz-border-radius: 	<%= finestyle[:big_button][:radius]  %>; 
		-o-border-radius: 		<%= finestyle[:big_button][:radius]  %>; 
		-ms-border-radius: 		<%= finestyle[:big_button][:radius]  %>; 
		border-radius: 			<%= finestyle[:big_button][:radius]  %>; 
		background: rgb(243,243,243); /* Old browsers */
		background: -moz-linear-gradient(top, rgba(243,243,243,1) 0%, rgba(143,168,181,1) 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(243,243,243,1)), color-stop(100%,rgba(143,168,181,1))); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, rgba(243,243,243,1) 0%,rgba(143,168,181,1) 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, rgba(243,243,243,1) 0%,rgba(143,168,181,1) 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, rgba(243,243,243,1) 0%,rgba(143,168,181,1) 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f3f3f3', endColorstr='#8fa8b5',GradientType=0 ); /* IE6-9 */
		background: linear-gradient(top, rgba(243,243,243,1) 0%,rgba(143,168,181,1) 100%); /* W3C */		}

a.big_button:hover { color: #fff;
		background: rgb(181,189,200); /* Old browsers */
		background: -moz-linear-gradient(top, rgba(181,189,200,1) 0%, rgba(130,140,149,1) 36%, rgba(40,52,59,1) 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(181,189,200,1)), color-stop(36%,rgba(130,140,149,1)), color-stop(100%,rgba(40,52,59,1))); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, rgba(181,189,200,1) 0%,rgba(130,140,149,1) 36%,rgba(40,52,59,1) 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, rgba(181,189,200,1) 0%,rgba(130,140,149,1) 36%,rgba(40,52,59,1) 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, rgba(181,189,200,1) 0%,rgba(130,140,149,1) 36%,rgba(40,52,59,1) 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#b5bdc8', endColorstr='#28343b',GradientType=0 ); /* IE6-9 */
			background: linear-gradient(top, rgba(181,189,200,1) 0%,rgba(130,140,149,1) 36%,rgba(40,52,59,1) 100%); /* W3C */	}
		

input[type="submit"], a.big_submit_button { float:left;  padding: 7px 20px 8px;  margin: 5px 5px 5px 0;
		border: solid 1px #3e5d0b; 
		-webkit-border-radius: 	<%= finestyle[:big_button][:radius]  %>; 
		-moz-border-radius: 	<%= finestyle[:big_button][:radius]  %>; 
		-o-border-radius: 		<%= finestyle[:big_button][:radius]  %>; 
		-ms-border-radius: 		<%= finestyle[:big_button][:radius]  %>; 
		border-radius: 			<%= finestyle[:big_button][:radius]  %>;
		color: #fff; font-weight: bold; font-size: 15px; 
		-webkit-text-shadow: 0px 0px 2px #3e5d0b; 
		-moz-text-shadow: 0px 0px 2px #3e5d0b; 
		text-shadow: 0px 0px 2px #3e5d0b; 
		background: rgb(64,112,172); /* Old browsers */
		background: -moz-linear-gradient(top, rgba(64,112,172,1) 0%, rgba(42,86,142,1) 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(64,112,172,1)), color-stop(100%,rgba(42,86,142,1))); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, rgba(64,112,172,1) 0%,rgba(42,86,142,1) 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, rgba(64,112,172,1) 0%,rgba(42,86,142,1) 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, rgba(64,112,172,1) 0%,rgba(42,86,142,1) 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#4070ac', endColorstr='#2a568e',GradientType=0 ); /* IE6-9 */
		background: linear-gradient(top, rgba(64,112,172,1) 0%,rgba(42,86,142,1) 100%); /* W3C */	}

input[type="submit"]:hover, a.big_submit_button:hover {
		background: #606c88; /* Old browsers */
		background: -moz-linear-gradient(top, #606c88 0%, #3f4c6b 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#606c88), color-stop(100%,#3f4c6b)); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, #606c88 0%,#3f4c6b 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, #606c88 0%,#3f4c6b 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, #606c88 0%,#3f4c6b 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#606c88', endColorstr='#3f4c6b',GradientType=0 ); /* IE6-9 */
		background: linear-gradient(top, #606c88 0%,#3f4c6b 100%); /* W3C */	}

.big_button_spacer { padding: 7px 20px 8px; background: transparent; border: solid 1px transparent; font-size: 15px; 
		margin: 5px 5px 5px 0; color:#444; float:left;}
		


