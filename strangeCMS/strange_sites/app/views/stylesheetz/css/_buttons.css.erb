	-webkit-border-radius: 	<%= finestyle[:fl_button][:radius]  %>; 
	-moz-border-radius: 	<%= finestyle[:fl_button][:radius]  %>; 
	-o-border-radius: 		<%= finestyle[:fl_button][:radius]  %>; 
