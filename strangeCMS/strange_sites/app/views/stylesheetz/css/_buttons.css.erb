a.finelineButton:hover, div.finelineButton:hover { 
	-moz-box-shadow: 		<%= finestyle[:fl_button][:box_shaddow_hover]  %>;
	-webkit-box-shadow: 	<%= finestyle[:fl_button][:box_shaddow_hover]  %>;
	box-shadow: 			<%= finestyle[:fl_button][:box_shaddow_hover]  %>;  }
