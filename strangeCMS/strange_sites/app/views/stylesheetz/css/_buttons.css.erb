<% finestyle ||= @finestyle -%>
/* ================ 	Buttons		  ================ */
#btn_edit {  width: 16px; height: 16px; position:absolute; top:0; 
		background: transparent url('/images/btns/bearbeiten_16px.png') 0px 0px no-repeat; right: 36px; display:block; opacity: .5;}
#btn_edit:hover { opacity: 1; }
#btn_del {  width: 16px; height: 16px; position:absolute; top:0; 
		background: transparent url('/images/btns/loeschen_16px.png') 0px 0px no-repeat; right: 15px; display:block; opacity: .5;}
#btn_del:hover { opacity: 1; }


.fineline_button { 
	min-width: 16px; min-height: 16px; 
	padding: 0; border: solid 1px transparent; 
	position:relative; display:inline-block;
	background: <%= finestyle[:button][:bg_color]  %> url('/images/fineline/button_bg/buttonBG_<%= finestyle[:button][:bg_image]  %>.png') 
	left center repeat-x;
	-webkit-border-radius: 	<%= finestyle[:button][:radius] %>; 
	-moz-border-radius: 	<%= finestyle[:button][:radius] %>; 
	-o-border-radius: 		<%= finestyle[:button][:radius] %>; 
	-ms-border-radius: 		<%= finestyle[:button][:radius] %>; 
	border-radius: 			<%= finestyle[:button][:radius] %>;
	
	-moz-box-shadow: 		<%= finestyle[:button][:box_shaddow] %>;
	-webkit-box-shadow: 	<%= finestyle[:button][:box_shaddow] %>;
	box-shadow: 			<%= finestyle[:button][:box_shaddow] %>;		}

.fineline_button img, .fineline_button a img { vertical-align: top !important; padding:0 !important; margin:0 !important;}

.fineline_button, .fineline_button a { 
	line-height: 16px; font-weight:normal; color: #fefefe; 
	text-shadow: 			<%= finestyle[:button][:text_shaddow] %>;
	-o-text-shadow: 		<%= finestyle[:button][:text_shaddow] %>;
	-webkit-text-shadow: 	<%= finestyle[:button][:text_shaddow] %>; 
	-moz-text-shadow: 		<%= finestyle[:button][:text_shaddow] %>;
	-ms-text-shadow: 		<%= finestyle[:button][:text_shaddow] %>;		}

.fineline_button:hover, a:hover .fineline_button { 
	background: <%= finestyle[:button][:bg_color_hover]  %> url('/images/fineline/button_bg/buttonBG_<%= finestyle[:button][:bg_image]  %>.png') 
	left center repeat-x;
	-moz-box-shadow: 		<%= finestyle[:button][:box_shaddow_hover] %>;
	-webkit-box-shadow: 	<%= finestyle[:button][:box_shaddow_hover] %>;
	box-shadow: 			<%= finestyle[:button][:box_shaddow_hover] %>;		}

.fineline_button:active, a:active .fineline_button { 
	background: <%= finestyle[:button][:bg_color_click]  %> url('/images/fineline/button_bg/buttonBG_<%= finestyle[:button][:bg_image]  %>.png') 
	left center repeat-x;
	-moz-box-shadow: 		<%= finestyle[:button][:box_shaddow_click] %>;
	-webkit-box-shadow: 	<%= finestyle[:button][:box_shaddow_click] %>;
	box-shadow: 			<%= finestyle[:button][:box_shaddow_click] %>;		}

.fineline_button:hover, .fineline_button:hover a {
	color: #666666;
	text-shadow: 			<%= finestyle[:button][:text_shaddow_hover]  %>;
	-o-text-shadow: 		<%= finestyle[:button][:text_shaddow_hover]  %>; 
	-webkit-text-shadow: 	<%= finestyle[:button][:text_shaddow_hover]  %>; 
	-moz-text-shadow: 		<%= finestyle[:button][:text_shaddow_hover]  %>;
	-ms-text-shadow: 		<%= finestyle[:button][:text_shaddow_hover]  %>;		}

/* ==========================================   C A N C E L _ B U T T O N   ====================================================================== */
a.big_button, a.fineline_cancel { 	float:left;  display: block; text-align: center; color: #333; font-weight: normal; font-size: 15px;
		padding: 4px 5px;  margin: 0 10px 10px 0; min-width: 100px;
		border: solid 1px #9a9a9a; 
		-webkit-border-radius: 	<%= finestyle[:cancel_button][:radius]  %>; 
		-moz-border-radius: 	<%= finestyle[:cancel_button][:radius]  %>; 
		-o-border-radius: 		<%= finestyle[:cancel_button][:radius]  %>; 
		-ms-border-radius: 		<%= finestyle[:cancel_button][:radius]  %>; 
		border-radius: 			<%= finestyle[:cancel_button][:radius]  %>; 
		-webkit-text-shadow: 0 0 3px #fff, 0 0 3px #fff; 
		-moz-text-shadow: 	 0 0 3px #fff, 0 0 3px #fff;
		text-shadow: 		 0 0 3px #fff, 0 0 3px #fff;
		background: #f5f2f2;
		background: -moz-linear-gradient(top, #f5f2f2 0%, #cdcdcd 100%);
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f5f2f2), color-stop(100%,#cdcdcd));
		background: -webkit-linear-gradient(top, #f5f2f2 0%,#cdcdcd 100%);
		background: -o-linear-gradient(top, #f5f2f2 0%,#cdcdcd 100%);
		background: -ms-linear-gradient(top, #f5f2f2 0%,#cdcdcd 100%);
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f5f2f2', endColorstr='#cdcdcd',GradientType=0 );
		background: linear-gradient(top, #f5f2f2 0%,#cdcdcd 100%);	}
a.big_button:hover, a.fineline_cancel:hover { border: solid 1px rgb(102,102,102);
		background: #f5f2f2;
		background: -moz-linear-gradient(top, #f5f2f2 0%, #999999 100%);
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f5f2f2), color-stop(100%,#999999));
		background: -webkit-linear-gradient(top, #f5f2f2 0%,#999999 100%);
		background: -o-linear-gradient(top, #f5f2f2 0%,#999999 100%);
		background: -ms-linear-gradient(top, #f5f2f2 0%,#999999 100%);
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f5f2f2', endColorstr='#999999',GradientType=0 );
		background: linear-gradient(top, #f5f2f2 0%,#999999 100%);	}
a.big_button:active, a.fineline_cancel:active { color: #000;
		-moz-box-shadow: 		<%= finestyle[:cancel_button][:box_shaddow_click]  %>;
		-webkit-box-shadow: 	<%= finestyle[:cancel_button][:box_shaddow_click]  %>;
		box-shadow: 			<%= finestyle[:cancel_button][:box_shaddow_click]  %>;
		}
/* ==========================================   S U B M I T _ B U T T O N   ====================================================================== */
input[type='submit'], a.big_submit_button, a.fineline_submit { float:left;  display: block; text-align: center; color: #fff; font-weight: normal; font-size: 15px;
		padding: 4px 5px;  margin: 0 10px 10px 0; min-width: 100px;
		border: solid 1px #025089; 
		-webkit-border-radius: 	<%= finestyle[:submit_button][:radius]  %>; 
		-moz-border-radius: 	<%= finestyle[:submit_button][:radius]  %>; 
		-o-border-radius: 		<%= finestyle[:submit_button][:radius]  %>; 
		-ms-border-radius: 		<%= finestyle[:submit_button][:radius]  %>; 
		border-radius: 			<%= finestyle[:submit_button][:radius]  %>;
		-webkit-text-shadow: 	0 0 3px #082f55, 0 0 3px #082f55; 
		-moz-text-shadow: 	 	0 0 3px #082f55, 0 0 3px #082f55;
		text-shadow: 		 	0 0 3px #082f55, 0 0 3px #082f55;
		-moz-box-shadow: 		<%= finestyle[:submit_button][:box_shaddow]  %>;
		-webkit-box-shadow: 	<%= finestyle[:submit_button][:box_shaddow]  %>;
		box-shadow: 			<%= finestyle[:submit_button][:box_shaddow]  %>;
		<%= @finestyle[:submit_button][:bg] %>	}

input[type='submit']:hover, a.big_submit_button:hover, a.fineline_submit:hover { <%= @finestyle[:submit_button][:bg_hover] %>   }

input[type='submit']:active, a.big_submit_button:active, a.fineline_submit:active { border: solid 1px #082f55;
		<%= @finestyle[:submit_button][:bg_click] %>
		-moz-box-shadow: 		<%= finestyle[:submit_button][:box_shaddow_click]  %>;
		-webkit-box-shadow: 	<%= finestyle[:submit_button][:box_shaddow_click]  %>;
		box-shadow: 			<%= finestyle[:submit_button][:box_shaddow_click]  %>; 
		-webkit-text-shadow: 	1px 1px 0 #082f55, 1px 1px 0 #082f55, 1px 1px 0 #082f55; 
		-moz-text-shadow: 	 	1px 1px 0 #082f55, 1px 1px 0 #082f55, 1px 1px 0 #082f55;
		text-shadow: 		 	1px 1px 0 #082f55, 1px 1px 0 #082f55, 1px 1px 0 #082f55;
		}
