.finelineIcon { display: inline-block; vertical-align: top; position: relative; padding:0; margin:0; border: none; outline: none; line-height: 18px; }
a.finelineButton, div.finelineButton { display: inline-block; padding:0; margin:1px; vertical-align: top; position: relative; outline: none; 
	line-height: 18px;
	<%= fine_borderRadius( '3px' ) %>
	border: solid 1px #336699;
	background: #336699; cursor: pointer;}
a.finelineButton:hover, div.finelineButton:hover {
	background: #336699; /* W3C */
} 
.finelineButton.kreis.flb18 { <%= fine_borderRadius( '10px' ) %> }
.finelineButton.kreis.flb24 { <%= fine_borderRadius( '13px' ) %> }
.finelineButton.kreis.flb32 { <%= fine_borderRadius( '17px' ) %> }
.finelineButton.kreis.flb48 { <%= fine_borderRadius( '25px' ) %> }

a.finelineButton:hover, div.finelineButton:hover { <%= fine_boxShadow( 'inset 1px 1px 1px 0px rgba(255,255,255,.4)' ) %>  }

a.finelineButton:active, div.finelineButton:active { <%= fine_boxShadow( 'inset 1px 1px 1px 0px rgba(0,0,0,.4)' ) %> color: #fff; }

a.finelineButton:hover div.hell, div.finelineButton:hover div.hell { }
