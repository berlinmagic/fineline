	-moz-box-shadow: 		<%= finestyle[:fl_button][:box_shaddow_click]  %>;
	-webkit-box-shadow: 	<%= finestyle[:fl_button][:box_shaddow_click]  %>;
	box-shadow: 			<%= finestyle[:fl_button][:box_shaddow_click]  %>;	}

