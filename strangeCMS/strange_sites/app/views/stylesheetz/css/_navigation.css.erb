<% finestyle ||= @finestyle -%>
/* =============================   Navigation   ======================================== */
/* ### LEVEL ONE ### */
#main_navigation { height: 34px; position:absolute; bottom: 0; left:0; display:block; margin:0; padding: 0 10px; z-index:555; list-style:none; 
			background: transparent; }

#main_navigation li { font-weight: bold; float: left; zoom: 1; background: #ccc; list-style:none; background: transparent; position:relative; }
#main_navigation li a:hover { padding: 7px 13px 4px; margin-top: 4px; border-color: transparent;  color:#ffffff; font-weight:thin;  }
#main_navigation li a {  
	padding: 4px 13px 4px; margin: 7px 3px 0 0; 
	position:relative; display:block; float:left;  opacity: 1;
	line-height: 18px; color: <%= finestyle[:main_nav_button][:bg_color_aktiv] %>; font-weight:normal; font-size: 14px;
	background: #336699; /* Old browsers */
	background: -moz-linear-gradient(top, #336699 0%, #214c63 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#336699), color-stop(100%,#214c63)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #336699 0%,#214c63 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #336699 0%,#214c63 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, #336699 0%,#214c63 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#336699', endColorstr='#214c63',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, #336699 0%,#214c63 100%); /* W3C */
	border: solid 1px transparent; border-bottom:0;
	-webkit-border-top-left-radius: <%=  finestyle[:main_nav_button][:radius] %>; -webkit-border-top-right-radius: <%=  finestyle[:main_nav_button][:radius] %>; 
	-moz-border-radius-topleft: <%=  finestyle[:main_nav_button][:radius] %>; -moz-border-radius-topright: <%=  finestyle[:main_nav_button][:radius] %>; 
	border-top-left-radius: <%=  finestyle[:main_nav_button][:radius] %>; border-top-right-radius: <%=  finestyle[:main_nav_button][:radius] %>;  }
#main_navigation li a.aktiv { padding: 7px 13px 4px; margin-top: 4px; font-size: 15px; border-color: transparent;  color:#336699;
	background: #ffffff;
	background: -moz-linear-gradient(top, #ffffff 0%, #ffffff 25%, #f3f3f3 80%, #f3f3f3 100%);
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#ffffff), color-stop(25%,#ffffff), color-stop(80%,#f3f3f3), color-stop(100%,#f3f3f3));
	background: -webkit-linear-gradient(top, #ffffff 0%,#ffffff 25%,#f3f3f3 80%,#f3f3f3 100%);
	background: -o-linear-gradient(top, #ffffff 0%,#ffffff 25%,#f3f3f3 80%,#f3f3f3 100%);
	background: -ms-linear-gradient(top, #ffffff 0%,#ffffff 25%,#f3f3f3 80%,#f3f3f3 100%);
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#f3f3f3',GradientType=0 );
	background: linear-gradient(top, #ffffff 0%,#ffffff 25%,#f3f3f3 80%,#f3f3f3 100%); /* W3C */		 }

/* ### LEVEL TWO ### */
#main_navigation ul.sub_navigation { width: 220px; visibility: hidden; position: absolute; top: 100%; left: -1px; margin:0; 
		background: #adadad; padding: 10px 0; 
		background: #f3f3f3; /* Old browsers */
		background: -moz-linear-gradient(top, #f3f3f3 0%, #f3f3f3 20%, #ffffff 75%, #ffffff 100%); /* FF3.6+ */
		background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#f3f3f3), color-stop(20%,#f3f3f3), color-stop(75%,#ffffff), color-stop(100%,#ffffff)); /* Chrome,Safari4+ */
		background: -webkit-linear-gradient(top, #f3f3f3 0%,#f3f3f3 20%,#ffffff 75%,#ffffff 100%); /* Chrome10+,Safari5.1+ */
		background: -o-linear-gradient(top, #f3f3f3 0%,#f3f3f3 20%,#ffffff 75%,#ffffff 100%); /* Opera11.10+ */
		background: -ms-linear-gradient(top, #f3f3f3 0%,#f3f3f3 20%,#ffffff 75%,#ffffff 100%); /* IE10+ */
		filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#f3f3f3', endColorstr='#ffffff',GradientType=0 ); /* IE6-9 */
		background: linear-gradient(top, #f3f3f3 0%,#f3f3f3 20%,#ffffff 75%,#ffffff 100%); /* W3C */
		border: solid 1px #cccccc;
		border-top:0;
		-webkit-border-bottom-left-radius: <%=  finestyle[:main_nav_subnav][:radius] %>; 
		-webkit-border-bottom-right-radius: <%=  finestyle[:main_nav_subnav][:radius] %>; 
		-moz-border-radius-bottomleft: <%=  finestyle[:main_nav_subnav][:radius] %>; 
		-moz-border-radius-bottomright: <%=  finestyle[:main_nav_subnav][:radius] %>; 
		border-bottom-left-radius: <%=  finestyle[:main_nav_subnav][:radius] %>; 
		border-bottom-right-radius: <%=  finestyle[:main_nav_subnav][:radius] %>; 	}
#main_navigation ul.sub_navigation li { background: transparent; border:0; float: none; margin:0; padding:0; width: 100%;}
	
#main_navigation ul.sub_navigation li a { background: transparent; padding: 7px 15px; float:none; color: #666; margin:0; font-weight:normal;
		border: 0; -webkit-border-radius: 0; -moz-border-radius: 0; border-radius: 0;
		border-bottom: 1px solid #fff; border-top: 1px solid #ccc; }
			
#main_navigation ul.sub_navigation li a.sub_aktiv { background: transparent; padding: 7px 15px; color: #336699; margin:0; font-weight:bold;
		border: 0; -webkit-border-radius: 0; -moz-border-radius: 0; border-radius: 0;
		border-bottom: 1px solid #fff; border-top: 1px solid #ccc;}

#main_navigation ul.sub_navigation li a:hover { padding: 7px 15px; color: #336699; margin:0; 
		border: 0; -webkit-border-radius: 0; -moz-border-radius: 0; border-radius: 0;
		border-bottom: 1px solid #fff; border-top: 1px solid #ccc;
		background: #f3f3f3; /* W3C */
		}

#main_navigation ul.sub_navigation li a:first-child { border-top:0; }
#main_navigation ul.sub_navigation li a:last-child { border-bottom:0; }

/* ### LEVEL THREE ### */
#main_navigation ul.sub_navigation ul { left: 150%; top: 0; }
#main_navigation li:hover > ul.sub_navigation { visibility: visible; }
