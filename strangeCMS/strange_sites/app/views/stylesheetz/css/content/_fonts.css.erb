/* ===============================		Fonts		==================================== */
body, select, input, textarea { color: #444; line-height: 20px; }

h1, h2, h3, h4, h5, h6 { font-weight: bold; }

a, a:active, a:visited { color: #607890; text-decoration:none; }

a:hover { color: #000; }


h1 { color: #336699; font-style: italic; font-weight: bold; font-size: 18px; line-height: 20px; margin:0; }
h2 { font-size:16px; line-height: 22px;}

em { font-style:italic; }

p { padding: 0; margin: 0; line-height: 20px; }




/* ===============================		Fonts  Style-Konzept		==================================== */
h1, h2, h3, h4, h5, h6, p { margin: 0; padding: 0; }

/* System_Navigation - Lucida Grande 15 Punkte - Regular */
.sys_nav { font-size: 15px; font-weight: normal; color: #003366; font-style: normal; }

/* System_Subnavigation - Lucida Grande 13 Punte - Bold */
.sys_subnav { font-size: 13px; font-weight: bold; color: #003366; font-style: normal; }

/* Überschrift 1 - Lucida Grande 13 Punkte - Bold italic #336699 (Seitenüberschriften) */
h1 { font-size: 13px; font-weight: bold; color: #336699; font-style: italic; }

/* Überschrift 2 - Lucida Grande 13 Punkte - Italic # 333333 (Systemüberschriften) */
h2, h1.admin { font-size: 14px; font-weight: normal; color: #333333; font-style: italic; }

/* Überschrift 3 - Lucida Grande 12 Punkte - Bold # 336699 (Beispieltitel) */
h3 { font-size: 12px; font-weight: bold; color: #336699; font-style: normal; }

/* Überschrift 4 - Lucida Grande 12 Punkte - Bold # 333333  */
h4 { font-size: 12px; font-weight: bold; color: #333333; font-style: normal; }

/* Überschrift 4 - Lucida Grande 12 Punkte - Bold # 333333  */
h5, a h5, h5 a { font-size: 13px; font-weight: normal; color: #333333; font-style: italic; }
h5:hover, a:hover h5, h5:hover a { color: #082f55; }

/* Normattext 1- Lucida Grande 12 Punkte - Regular # 666666 (Systemtext) */
.norm1 { font-size: 12px !important; font-weight: normal !important; color: rgb(102,102,102) !important; font-style: normal !important; }

/* Normattext 2 - Lucida Grande 12 Punkte - Regular # 333333 (Eingabefelder, Kundeneingaben) */
.norm2 { font-size: 12px !important; font-weight: normal !important; color: #333333 !important; font-style: normal !important; }

/* Normaltext 3 - Lucida Grande 13 Punkte - Regular # 999999 (Beispieltexte) */
.norm3 { font-size: 12px !important; font-weight: normal !important; color: #999999 !important; font-style: normal !important; }

/* System_Hilfetexte - Lucida Grande 12 Punkte - Italic # 666666 */
.sys_help { font-size: 12px !important; font-weight: normal !important; color: rgb(102,102,102) !important; font-style: italic !important; }

/* Zusatztext 1 - Lucida Grande 10 Punkte - Regular # 666666 (Taggs) */
.zt1 { font-size: 10px; font-weight: normal; color: rgb(102,102,102); font-style: normal; }

/* Zusatztext 2 - Lucida Grande 10 Punkte - Regular # 999999 (Taggs, ) */
.zt2 { font-size: 10px; font-weight: normal; color: #999999; font-style: normal; }

/* Zusatztext 3 - Lucida Grande 10 Punkte - Italic # 666666 (Breadcrumbs) */
.zt3 { font-size: 10px; font-weight: normal; color: rgb(102,102,102); font-style: italic; }

/* Zusatztext 4 - Lucida Grande 10 Punkte - Italic # 999999 (Breadcrumbs) */
.zt4 { font-size: 10px; font-weight: normal; color: #999999; font-style: italic; }

/* Zusatztext 5  - Lucida Grande 10 Punkte - Regular # 336699 (Kommentar, Links) */
.zt5 { font-size: 10px; font-weight: normal; color: #336699; font-style: normal; }







