.side_box .sidebar_head:active { 
		<%= fine_box_css( 'SidebarHead', 'front', 'active') %> 
		<%= fine_font_style( 'SidebarHead', 'front', true, 'active' ) %> }
.side_box.dbx-box-open .sidebar_head { 
		<%= fine_box_css( 'SidebarHead', 'front', 'active') %> 
		<%= fine_font_style( 'SidebarHead', 'front', true, 'active' ) %> }


