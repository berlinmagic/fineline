<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<head>
<%= render 'shared/head' %>

<%#= render 'stylesheetz/all' %>

<%= stylesheet_link_tag '/system/finestyle' %>

<%= yield :front_styles %>

</head>

<body lang="de">
  <div id="container">
<noscript>
	<div class="nojs_alert_box">
		<div class="container_48">
			<div class="fl_box_950">
				<h3>Achtung! Bitte aktivieren Sie JavaScript, dies ist Vorraussetzung f√ºr alle erweiterten Funktionen!!!</h3>
			</div>
		</div>
	</div>
</noscript>
<%= render 'shared/notice' %>

<%= hook :user_part do %>
	<%= render 'navigation/user' %>
<% end %>

<%= render 'parts/header'%>


<div id="fine_banner_box">
	<div id="banner">
		<%= hook :strange_banner %>
		<%= render 'navigation/main' %>
	</div>
</div>


<%= render 'parts/breadcrumps' %>

<div id="main" role="main">
	<div class="container_48">
		<div class="fl_box_710">
			
			<%= yield %>
			
		</div>
		<div class="fl_box_210 push_1">
			<%= yield :sidebar %>
			
			<%= yield :modul_sidebar %>
			
			<%= hook :strange_sidebar_test do %>
				<div class="side_box">
					<div class="sidebar_head">
						<a href="#">fineline-Sidebar</a>
					</div>
					<ul class='sidebar'>
						<% if current_user %>
							<li><%= link_to 'neue Seite', new_seite_url %></li>
						<% else %>
							<li><p>Beispiel Sidebar</p></li>
							<li><p>Modul-Sidebars:</p></li>
							<li><p>- News_Modul</p></li>
							<li><p>- Bild_Modul</p></li>
						<% end %>
					</ul>
				</div>
			<% end %>
			
			<%= hook :strange_sidebar %>
		</div>
		<div class="clearfix"></div>
	</div>
	<div class="clearfix"></div>
</div>

<div class="clearfix"></div>
<footer>
	<div class="kasten">
		<div class="right">
			<br/><br/>
			<%= render 'navigation/footer' %>
			<div class="clearfix"></div>
			<br/>
			<p>Copyright &copy; 2011 <%= link_to 'Orangenwerk', 'http://orangenwerk.com' %> - Creators of BestCMSever</p>
		</div>
		<%= hook :footer_before_language_changer%>
		<%= render 'shared/language_changer' %>
		
		<div class="clearfix"></div>
		<%# debug(params) if Rails.env.development? %>
	</div>
</footer>

</div> <!--! end of #container -->


<%- # Javascript at the bottom for fast page loading -%>



  <%- # Grab Google CDN's jQuery. fall back to local if necessary -%>
  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js' %>
  <%= javascript_tag %{!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/libs/jquery-1.5.1.min.js"%3E%3C/script%3E'))} %>

  <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/jquery-ui.min.js' %>

  <%= javascript_include_tag '/system/finescript' %>


  <%- # Fix any <img> or .png_bg background-images -%>
  <!--[if lt IE 7 ]>
    <%= javascript_include_tag 'libs/dd_belatedpng.js' %>
    <%= javascript_tag %{DD_belatedPNG.fix('img, .png_bg')} %>
  <![endif]-->

	<%= yield :front_js %>
	<%= yield :js_stuff %>
	<%= yield :more_front_stuff %>
	<%= hook :strange_front_js_stuff %>
  




</body>
</html>