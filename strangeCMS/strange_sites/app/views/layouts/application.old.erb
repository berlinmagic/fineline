<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="no-js ie6"> <![endif]-->
<!--[if IE 7 ]>    <html class="no-js ie7"> <![endif]-->
<!--[if IE 8 ]>    <html class="no-js ie8"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html class="no-js"> <!--<![endif]-->
<head>
<%= render 'shared/head' %>
<%= yield :front_styles %>

<%- # Javascript at the bottom for fast page loading -%>

 <%- # Grab Google CDN's jQuery. fall back to local if necessary -%>
 <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js' %>
 <%= javascript_tag %{!window.jQuery && document.write(unescape('%3Cscript src="/javascripts/libs/jquery-1.5.1.min.js"%3E%3C/script%3E'))} %>

 <%= javascript_include_tag '//ajax.googleapis.com/ajax/libs/jqueryui/1.8.10/jquery-ui.min.js' %>

 <%= theme_javascript_include_tag 'plugins' %>
 <%= theme_javascript_include_tag 'rails' %>
 <%= theme_javascript_include_tag 'strange' %>


 <%- # Fix any <img> or .png_bg background-images -%>
 <!--[if lt IE 7 ]>
   <%= javascript_include_tag 'libs/dd_belatedpng.js' %>
   <%= javascript_tag %{DD_belatedPNG.fix('img, .png_bg')} %>
 <![endif]-->
  <%= yield :js_stuff %>

<%= yield :more_front_stuff %>

<%= hook :strange_front_js_stuff %>


<%= yield :front_js %>

</head>

<body lang="de">
  <div id="container">
<%= hook :strange_page do %>


<%= hook :user_part do %>
	<%= render 'shared/user_navigation' %>
<% end %>

<header>
	<div id="top_area">
		<div class="kasten">
			<%= link_to( image_tag("#{Strangecms::Config[:strange_logo]}"), root_url, :id => "strange_LOGO" ) %>
			<%= render 'shared/head_navigation' %>
		</div>
	</div>
</header>


<div id="banner">
	<div class="kasten">
		<%= hook :strange_banner %>
		
		<%= render 'shared/notice' %>
		
		<%= render 'shared/main_navigation' %>
	</div>
</div>



<div id="main" role="main">
	<div class="kasten">
		<div id="content">
			<%= yield %>
		</div>
		<aside class="right">
			<%= hook :strange_sidebar_test do %>
			<div class="side_box">
				<strong>Seitenleiste:</strong><br/><br/>

			</div>
			<% end %>
			<%= yield :sidebar %>
			<%= hook :strange_sidebar %>
		</aside>
		<div class="clearfix"></div>
		<br/>
	</div>
</div>


<footer>
	<div class="kasten">
		<div class="right">
			<br/><br/>
			<%= render 'shared/footer_navigation' %>
			<div class="clearfix"></div>
			<br/>
			<p>Copyright Â© 2011 <%= link_to 'Orangenwerk', 'http://orangenwerk.com' %> - Creators of BestCMSever</p>
		</div>
		<%= hook :footer_before_language_changer%>
		<%= render 'shared/language_changer' %>
		
		<div class="clearfix"></div>
		<%# debug(params) if Rails.env.development? %>
	</div>
</footer>

<% end %>
</div> <!--! end of #container -->


 
	
	
  <%- # asynchronous google analytics: mathiasbynens.be/notes/async-analytics-snippet -%>
  <%- if Rails.env.production? -%>
  <script>
   var _gaq = [['_setAccount', '<%= Strangecms::Config[:analytics_key] %>'], ['_trackPageview']];
   (function(d, t) {
    var g = d.createElement(t),
        s = d.getElementsByTagName(t)[0];
    g.async = true;
    g.src = ('https:' == location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    s.parentNode.insertBefore(g, s);
   })(document, 'script');
  </script>
  <%- end -%>


</body>
</html>