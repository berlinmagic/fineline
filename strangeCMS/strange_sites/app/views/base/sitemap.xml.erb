<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
<% @pages.each do |seite|%>
   <url>
      <loc><%= @public_dir %><%= seite.slug.gsub!('/', '') unless seite.system_name && seite.system_name == 'start' %></loc>
      <lastmod><%= seite.updated_at.strftime('%Y-%m-%d') %></lastmod>
      <changefreq>weekly</changefreq>
      <priority>0.8</priority>
   </url>
<% end %>
</urlset> 