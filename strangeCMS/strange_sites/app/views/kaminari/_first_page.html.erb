<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if ( num_pages > 4 ) && (current_page > 2) %>
<span class="first">
<%#= link_to_unless current_page.first?, raw(t 'views.pagination.first'), url, :remote => remote -%>
<%= link_to_unless current_page.first?, finelineButton(  :icon => 3, 
                				:blur => Strangecms::Stylez::Config[:front_PaginationNavButton_icon_blur], 
								:color => Strangecms::Stylez::Config[:front_PaginationNavButton_icon_color], 
								:size => Strangecms::Stylez::Config[:front_PaginationNavButton_icon_size], 
								:class => "pagination_nav #{ Strangecms::Stylez::Config[:front_PaginationNavButton_style] }"
								), url, :remote => remote %>
</span>
<% end %>