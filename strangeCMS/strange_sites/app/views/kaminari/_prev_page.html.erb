<%# Link to the "Previous" page
  - available local variables
    url:           url to the previous page
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="prev<%= ' current' if current_page.first? %>">
<%#= link_to_unless current_page.first?, raw(t 'views.pagination.previous'), url, :rel => 'prev', :remote => remote %>
<%= link_to_unless current_page.first?, finelineButton(  :icon => 1, 
                				:blur => Strangecms::Stylez::Config[:front_PaginationNavButton_icon_blur], 
								:color => Strangecms::Stylez::Config[:front_PaginationNavButton_icon_color], 
								:size => Strangecms::Stylez::Config[:front_PaginationNavButton_icon_size], 
								:class => "pagination_nav #{ Strangecms::Stylez::Config[:front_PaginationNavButton_style] }"
								), url, :rel => 'prev', :remote => remote %>
</span>
