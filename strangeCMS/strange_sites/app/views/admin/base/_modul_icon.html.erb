<% modul_url 		||= '#' %>
<% modul_titel		||= 'fineline_Modul' %>
<% modul_name 		||= 'Version' %>
<% modul_version	||= '0.0.0' %>
<% modul_kats 		||= ' * * * ' %>
<% modul_info 		||= 'fineline - Module ... erhöht die Funktionalität Ihrer Seite.' %>
<% modul_icon 		||= 'fineline-software-box' %>

<!-- Modul - Icon	-->
<div class="finelineModulBox_Icon">
		<a class="module_icon" href="<%= modul_url %>">
			<div class="module_pic">
				<%# image_tag '/images/icon_news.png' %>
				<%= image_tag "/images/modul_icons/smal_80/#{modul_icon}.png" %>
			</div>
			<p><strong><%= modul_titel %></strong>&nbsp;&ndash;&nbsp;<%= modul_version %></p>
		</a>
</div>

<!-- Modul - Listen-Zeile	-->
<div class="finelineModulBox_List">
		<div class="clearfix"></div>
		<div class="box">
			<div class="in_box">
				<div class="trenn_linie"></div>
			</div>
		</div>

		<div class="box">
			<div class="in_box">
			<a class="finelineModulLinkBox" href="<%= modul_url %>">
				<div class="fineModulActionBox">
					<div class="modul_state_button">
						Aktiv
					</div>
					<div class="clearfix"></div>
					<br/>
					<p><%= modul_kats %></p>
				</div>
				<div class="fineModulIconBox">
					<%= image_tag "/images/modul_icons/smal_80/#{modul_icon}.png" %>
				</div>
				<div class="fineModulInfoBox">
					<p class="fineModulHeadline"><%= modul_titel %></p>
					<p class="fineModulSubHeadline"><%= modul_name %> &ndash; <%= modul_version %></p>
					<br/>
					<p><%= modul_info %></p>
				</div>


				<div class="clearfix"></div>
			</a>
			</div>
		</div>
		<div class="clearfix"></div>
</div>
