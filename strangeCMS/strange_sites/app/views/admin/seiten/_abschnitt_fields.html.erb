
<% if f.object.stuff_typ && f.object.stuff_typ == 'trenn_linie' %>
<div class="abschnitt-inhalt fields box" id="<%= dom_id(f.object)%>">
	<div class="box edit_in">
		<div class="in_box">
			<div class="deleted_abschnitt"><strong>X</strong> Gelöscht!</div>
			<div class="abschnitt_admin_toolz">
				<div class="remove_nested_form"><%= link_to_remove_fields dom_id(f.object), f %></div>
			</div>
			<span class="handle"></span>

			<div class="trenn_linie"></div>

		</div>
	</div>
</div>
<% end %>

<%= hook :in_form_abschnitte, :f => f %>

<% if f.object.stuff_typ && f.object.stuff_typ == 'text' %>

<div class="abschnitt-inhalt fields box" id="<%= dom_id(f.object)%>">
	<div class="box edit_in">
<div class="in_box">
	<div class="deleted_abschnitt"><strong>X</strong> Gelöscht!</div>
	<div class="abschnitt_admin_toolz">
		<% if f.object.system_stuff %>
		
			<% if site_master %>

				<div class="remove_nested_forms"><%= link_to_remove_fields dom_id(f.object), f %></div>
				<div class="edit_nested_form">
					<%= link_to fineline_button('bearbeiten'), '#', :class => "Pagez__toggle_remote_link tolltips_edit", :title => "Abschnitt bearbeiten" %></div>
					
			<% end %>
			
		<% else %>
		
			<div class="remove_nested_forms"><%= link_to_remove_fields dom_id(f.object), f %></div>
			<div class="edit_nested_form">
				<%= link_to fineline_button('bearbeiten'), '#', :class => "Pagez__toggle_remote_link tooltip", :title => "Abschnitt bearbeiten" %></div>
				
		<% end %>
		
		<div class="edit_admin">
			<%= f.hidden_field :system_stuff, :value => f.object.system_stuff, :class => 'system_abschnitt' %>
			<% if site_master %>
			
				<%= link_to fineline_button('system-close'), '#', 
					:class => "admin_system_stuff_link tooltip #{'hidden' if f.object.system_stuff}", :title => "Abschnitt sperren" %>
				<%= link_to fineline_button('system-open'), '#', 
					:class => "admin_system_stuff_unlink tooltip #{'hidden' unless f.object.system_stuff}", :title => "Abschnitt freigeben" %>
			
			<% end %>
			
			
		</div>
		
	</div>	
	
	<span class="handle"><%= image_tag '/images/fineline/icons_16/position.png'%></span>
	<div class="show_text">	
		<%= raw f.object.inhalt %>
		<div class="clearfix"></div>
	</div>
	<div class="hidden">
		<%#= f.fields_for :text do |builder| %>
    		<%#= render "live_text_fields", :f => builder %>
  		<%# end %>
		 <%= f.text_area :inhalt, :class => 'live-fck', :size => "170x5" %>
	</div>

</div>
</div>
</div>
<% end %>

<%# if (f.object.stuff_typ.nil? || f.object.stuff_typ == '') && f.object.text.nil? %>
<% if (f.object.stuff_typ.nil? || f.object.stuff_typ == '') %>
<div class="abschnitt_toolz box">
	<div class="box edit_in">
	<div class="in_box">
		<div class="deleted_abschnitt"><strong>X</strong> Gelöscht!</div>
		<div class="abschnitt_admin_toolz">
			<div class="remove_nested_form"><%= link_to_remove_fields dom_id(f.object), f %></div>
		</div>
		<div class="nested_form">
			<%# f.fields_for :text do |builder| %>
				<%#= render "text_fields", :f => builder %>
			<%# end %>
		
			<div class="abschnitt_choose_toolz">
				<p class="nested_head">Abschnitt-typ wählen:</p>
				<%= hook :abschnitt_content_choose do %>
				<div class="add_nested_form add_text_field abschnitt_choose_option"><%#= link_to_add_fck_fields "#{fineline_button('bearbeiten')} Text", f, :text %></div>
				<div class="add_trenn_linie abschnitt_choose_option"><%= link_to fineline_button('bearbeiten')+' Trennlinie', '#' %></p>
				<% end %>
				
			</div>
		</div>
		<div class="hidden k_box"><%= f.hidden_field :stuff_typ, :value => '' %></div>
		<div class="hidden k_param_box"><%= f.hidden_field :stuff_param, :value => '' %></div>
	</div>
	</div>
</div>
<% end %>




