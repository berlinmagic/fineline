	$('.fineline_selecto a.fineline_select_trigger').live('click', function(event){
		event.preventDefault();
		$('.fineline_select').css('z-index', '1');
		$(this).parent().css('z-index', '42');
		$(this).parent().find('.fineline_select_box.hidden').hide().removeClass('hidden');
		$(this).parent().find('.fineline_select_box').slideDown(500);
		// $(this).parent().parent().find('.fineline_select_box').fadeIn(500);
	});
	
	$('.fineline_select_boxo ul li a').live('click', function(event){
		event.preventDefault();
		var this_href = $(this).attr('href');
		var this_text = $(this).html();
		$(this).parent().parent().parent().parent().find('.fineline_select_text').html( this_text );
		$(this).parent().parent().parent().parent().find('.fineline_select_box').slideUp(500);
		// $(this).parent().parent().parent().parent().find('.fineline_select_box').fadeOut(500);
		if ( $(this).parent().hasClass('blank') ) {
			$(this).parent().parent().parent().parent().find('.fineline_select_text').removeClass('selected');
			$(this).parent().parent().parent().parent().find('.fineline_select_box_input').val('');
		} else {
			$(this).parent().parent().parent().parent().find('.fineline_select_text').addClass('selected');
			$(this).parent().parent().parent().parent().find('.fineline_select_box_input').val( this_href );
		}
		$(this).parent().parent().parent().parent().css('z-index', '3');
	});
	
