				$(this).parent().css('z-index', '42');
				$(this).parent().find('.fineline_select_box.hidden').hide().removeClass('hidden');
				$(this).parent().find('.fineline_select_box').slideDown(500);
				// $(this).parent().parent().find('.fineline_select_box').fadeIn(500);
