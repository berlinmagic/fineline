<div class="fl_box_630 apollo">

				<div class="field toggle_check">
					<%= f.check_box :use_titel %> <%= f.label :use_titel %>
				</div>
				<div class="field <%= 'hidden' unless @seite.use_titel %> toggle_field">
					<%= f.label :titel %> <span class="sys_help system_help_text <%= 'hidden' unless Strangecms::Config[:show_help] %>">(Fenstername)</span><br />
					<%= f.text_field :titel, :class => 'tipped seo_field', :placeholder => Seite.human_attribute_name(:titel) %>
				</div>
				<div class="field">
					<%= f.label :meta_keywords %> <span class="sys_help system_help_text <%= 'hidden' unless Strangecms::Config[:show_help] %>">(Suchworte .. weniger ist mehr!)</span><br />
					<%= f.text_field :meta_keywords, :size => '80', :class => 'tipped seo_field', :placeholder => Seite.human_attribute_name(:meta_keywords) %>
				</div>
				<div class="field">
					<%= f.label :meta_description %> <span class="sys_help system_help_text <%= 'hidden' unless Strangecms::Config[:show_help] %>">(Beschreibung der Seite, für Google-Trefferliste)</span><br />
					<%= f.text_area :meta_description, :size => '80x4', :class => 'tipped seo_field', :placeholder => Seite.human_attribute_name(:meta_description) %>
				</div>
				<div class="toggle_trigger" id="gp_trigger" href="#">Google-Vorschau:</div>
				<div class="google_preview hidden toggle_box">
					<ol>
						<li class="inaktiv">
							<div class="google_preview_entry">
								<span class="google_title">
									<h3><a href="#"><em class="g_preview">fineline CMS</em>, das wohl durchdachteste CMS der Welt!</a></h3>
								</span>
								<div class="google_domain">
									<cite>fineline-cms.com/<b>ueber-uns</b></cite>

								</div>
								<span class="google_text">
									orangenwerk räumt den Markt auf, <em class="g_preview">fineline CMS</em> seit September online.<br/>
									<em class="g_preview">fineline CMS</em> laut orangenwerk das wohl einfachste und komfortabelste <b>...</b><br></span>
							</div>
						</li>
						<li>
							<div class="google_preview_entry">
								<span class="google_title">
									<h3><a href="#" id="pg_titel"><%= @seite.titel %></a></h3>
								</span>
								<div class="google_domain">
									<cite><%= request.host %>/<b><%= @seite.slug %></b></cite>

								</div>
								<span class="google_text" id="pg_text">
									<%= @seite.meta_description %><br></span>
							</div>
						</li>
						<li class="inaktiv">
							<div class="google_preview_entry">
								<span class="google_title">
									<h3><a href="#"><em class="g_preview">fineline CMS</em>, das wohl durchdachteste CMS der Welt!</a></h3>
								</span>
								<div class="google_domain">
									<cite>fineline-cms.com/<b>ueber-uns</b></cite>

								</div>
								<span class="google_text">
									orangenwerk räumt den Markt auf, <em class="g_preview">fineline CMS</em> seit September online.<br/>
									<em class="g_preview">fineline CMS</em> laut orangenwerk das wohl einfachste und komfortabelste <b>...</b><br></span>
							</div>
						</li>
					</ol>
				</div>
				
		<div class="clearfix"></div>

</div>
