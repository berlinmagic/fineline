<div class="box">
	<div class="in_box first">
		<h1 class="icon"><%= finelineIcon(:icon => 32, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_preferences.kontakt_settings') %></h1>

	</div>
</div>

<div class="box">
	<div class="in_box">
		<h3>Hier sehen Sie die momentan aktiven Felder Ihres Kontakt-Formulars:</h3>
		<br/>
		<table>
			<% if Strangecms::Config[:kontakt_anrede] %>
			<tr>
				<th>Anrede</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_anrede] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_titel] %>
			<tr>
				<th>Titel</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_titel] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_name] %>
			<tr>
				<th>Name</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_name] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_vorname] %>
			<tr>
				<th>Vorname</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_vorname] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_firma] %>
			<tr>
				<th>Firma</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_firma] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_abteiung_oder_position] %>
			<tr>
				<th>Abteilung / Position</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_abteiung_oder_position] %></em></td>
			</tr>
			<% end %>
			<tr>
				<th>E-Mail</th>
				<td><em><%= t('strange_preferences.system_pflicht_feld') %></em></td>
			</tr>
			<% if Strangecms::Config[:kontakt_webseite] %>
			<tr>
				<th>Webseite</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_webseite] %></em></td>
			</tr>
