				<th>Bundesland</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_bundesland] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_land] %>
			<tr>
				<th>Land</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_land] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_geburtstag] %>
			<tr>
				<th>Geburtstag</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_geburtstag] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_telefon] %>
			<tr>
				<th>Telefon</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_telefon] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_telefax] %>
			<tr>
				<th>Fax</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_telefax] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_mobil] %>
			<tr>
				<th>Mobil-Telefon</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_mobil] %></em></td>
			</tr>
			<% end %>
			<% if Strangecms::Config[:kontakt_betreff] %>
