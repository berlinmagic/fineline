				<th>Betreff</th>
				<td><em><%= 'Plichtfeld' if Strangecms::Config[:kontakt_validate_betreff] %></em></td>
			</tr>
			<% end %>
			<tr>
				<th>Inhalt</th>
				<td><em><%= t('strange_preferences.system_pflicht_feld') %></em></td>
			</tr>
		</table>
	</div>
</div>

