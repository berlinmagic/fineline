
<div class="admin_box">
	<h1 class="admin"><%= finelineIcon(:icon => 53, :color => 'dunkel', :size => 24, :blur => 50) %><%= t('strange_preferences.site_settings') %></h1>
	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<p>Hier sehen Sie standard CMS-Einstellungen.</p>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box white">
				<table class="settings">
					<tr>
						<th colspan="2" class="u_kat"><%= t('strange_preferences.site_settings')%></th>
					</tr>
					<tr>
						<th><%= t('strange_preferences.site_name') %></th>
						<td><%= Strangecms::Config[:site_name] %></td>
					</tr>
					<tr>
						<th><%= t('strange_preferences.site_url') %></th>
						<td><%= Strangecms::Config[:site_url] %></td>
					</tr>
					<tr>
						<th><%= t('strange_preferences.show_site_name') %></th>
						<td><%= Strangecms::Config[:show_site_name] ? 'Ja' : 'Nein' %></td>
					</tr>
					<tr>
						<th><%= t('strange_preferences.invite_only_site') %></th>
						<td><%= Strangecms::Config[:invite_only_site] ? 'Ja' : 'Nein' %></td>
					</tr>
					<tr>
						<th colspan="2" class="u_kat">Social-Einstellungen</th>
					</tr>
					<tr>
						<th>FaceBook App-ID</th>
						<td>
							<% if Strangecms::Config[:facebook_app_id] && Strangecms::Config[:facebook_app_id] != "UA-XXXXX-X" && Strangecms::Config[:facebook_app_id] != "" %>
								<strong><%= Strangecms::Config[:facebook_app_id] %></strong>
							<% else %>
								<span class="panic">Achtung, nicht vergeben!</span>
							<% end %>
						</td>
					</tr>
					<tr>
						<th colspan="2" class="u_kat"><%= t('strange_preferences.google_settings')%></th>
					</tr>
					<tr>
						<th><%= t('strange_preferences.analytics_key') %></th>
						<td>
							<% if Strangecms::Config[:analytics_key] && Strangecms::Config[:analytics_key] != "UA-XXXXX-X" && Strangecms::Config[:analytics_key] != "" %>
								<strong>O.K.</strong>
							<% else %>
								<span class="panic">Achtung, nicht vergeben!</span>
							<% end %>
						</td>
					</tr>
					<tr>
						<th><%= t('strange_preferences.g_maps_key') %></th>
						<td>
							<% if Strangecms::Config[:g_maps_key] && Strangecms::Config[:g_maps_key] != "UA-XXXXX-X" && Strangecms::Config[:g_maps_key] != "" %>
								<strong>O.K.</strong>
							<% else %>
								<span class="panic">Achtung, nicht vergeben!</span>
							<% end %>
						</td>
					</tr>
					<tr>
						<th colspan="2" class="u_kat"><%= t('strange_preferences.locale_settings')%></th>
					</tr>
					<tr>
						<th><%= t('strange_preferences.allow_locale_switching') %></th>
						<td><%= Strangecms::Config[:allow_locale_switching] ? 'Ja' : 'Nein' %></td>
					</tr>
					<tr>
						<th><%= t('strange_preferences.default_locale') %></th>
						<td><%= t("System_Locale.#{Strangecms::Config[:default_locale]}") %></td>
					</tr>
					<% if current_user && site_master %>
					<tr>
						<th colspan="2" class="u_kat"><%= t('strange_preferences.locale_settings')%></th>
					</tr>
					<tr>
						<th><%= t('strange_preferences.compress_stylez') %></th>
						<td><%= Strangecms::Config[:compress_stylez] ? 'Ja' : 'Nein' %></td>
					</tr>
					<tr>
						<th><%= t('strange_preferences.compress_scriptz') %></th>
						<td><%= Strangecms::Config[:compress_scriptz] ? 'Ja' : 'Nein' %></td>
					</tr>
					<% end %>
				</table>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= render 'edit_buttons' %>
			</div>
		</div>
	</div>
</div>



<%= render 'sidebar' %>