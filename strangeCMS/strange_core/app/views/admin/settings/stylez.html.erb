$(function() {
	
	$('.pick_color').jPicker({ localization: { text: { ok: 'übernehmen', cancel: 'verwerfen' }} }, function(color, context){
	      var all = color.val('all');
	      $(this).parent().parent().parent().parent().find('.vorschau').css({ color: all && '#' + all.hex || 'transparent' }); 
		});
	
	<%= ff_fine_icon_scripter( 'lightboxNav' ) %>
	<%= ff_fine_icon_scripter( 'systemButton' ) %>
	<%= ff_fine_icon_scripter( 'finePagination', :thing => 'box' ) %>
	<%= ff_fine_icon_scripter( 'PaginationNavButton' ) %>
	<%= ff_fine_icon_scripter( 'PaginationViewButton' ) %>
	
	<%= ff_fine_icon_scripter( 'finelineButton' ) %>
	
	<%= ff_fine_icon_scripter( 'lightboxNav', :area => 'admin' ) %>
	
	$('.ff_Btn_pick_color').jPicker({ localization: { text: { ok: 'übernehmen', cancel: 'verwerfen' }} });
	
	$('.fl_pick_color').jPicker({ localization: { text: { ok: 'übernehmen', cancel: 'verwerfen' }} });

});
</script>
<% end %>