						<%= ff_fine_font_styler( 'h4' ) %>
						<%= ff_fine_font_styler( 'h5' ) %>
						<%= ff_fine_font_styler( 'h6' ) %>
						
						<%= ff_fine_font_styler( 'headline' ) %>
						
						<%= ff_fine_font_styler( 'p' ) %>
						<%= ff_fine_font_styler( 'body' ) %>
