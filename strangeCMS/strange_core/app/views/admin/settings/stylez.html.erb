<%= render 'admin/shared/seiten_sub_menu' %>
<link href='http://fonts.googleapis.com/css?family=<%= Strangecms::Stylez::Config[:google_font_one] %>' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=<%= Strangecms::Stylez::Config[:google_font_two] %>' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=<%= Strangecms::Stylez::Config[:google_font_three] %>' rel='stylesheet' type='text/css'>


<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 71, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_stylez.settings') %></h1>

	<div class="admin_in_box">
		<div class="system_help_text<%= ' hidden' unless Strangecms::Config[:show_help] %>">
			<div class="box">
				<div class="in_box">
					<p class="sys_help"><%= t('strange_header.helptext.index') %></p>
				</div>
			</div>
		</div>
		
		<div class="box">
				<div class="trenn_linie"></div>
		</div>
		

		<div class="work_box">
			<div class="in_box white" id="Hpics_Box">
				
				<div class="toggle_list_trigger">
					<h2><span>Schriften</span></h2>
				</div>
				<div class="toggle_list_box">
						
						
						<%= ff_fine_font_styler( 'h1' ) %>
						<%= ff_fine_font_styler( 'h2' ) %>
						<%= ff_fine_font_styler( 'h3' ) %>
						<%= ff_fine_font_styler( 'h4' ) %>
						<%= ff_fine_font_styler( 'h5' ) %>
						<%= ff_fine_font_styler( 'h6' ) %>
						
						<%= ff_fine_font_styler( 'headline' ) %>
						
						<%= ff_fine_font_styler( 'p' ) %>
						<%= ff_fine_font_styler( 'body' ) %>
						<%= ff_fine_font_styler( 'pre' ) %>
						<div class="clearfix"></div>
						
						<div id="comments">
							
						</div>
				</div>
				
				<div class="clearfix"></div>
				

				<div class="toggle_list_trigger">
					<h2><span>Buttons</span></h2>
				</div>
				<div class="toggle_list_box">
					
						<%= ff_fine_icon_styler( 'systemButton', :thing => 'icon' ) %>
						
						<%= ff_fine_icon_styler( 'lightboxNav', :thing => 'icon' ) %>
						
						<%= ff_fine_icon_styler( 'PaginationNavButton', :thing => 'icon' ) %>
						
						<%= ff_fine_icon_styler( 'PaginationViewButton', :thing => 'icon' ) %>

						<%# # #%>
						
						<%= ff_fine_icon_styler( 'finelineButton', :thing => 'icon' ) %>
						
						
						<%= ff_fine_icon_styler( 'lightboxNav', :thing => 'icon', :area => 'admin' ) %>

						<div class="clearfix"></div>
						
						
				</div>
				
				<div class="clearfix"></div>
				
				<div class="toggle_list_trigger">
					<h2><span>Boxen</span></h2>
				</div>
				<div class="toggle_list_box">

						
						<%= ff_fine_icon_styler( 'finePagination', :thing => 'box', :group => 'pagination' ) %>


						<div class="clearfix"></div>
						
						
				</div>
				
				<div class="clearfix"></div>
				
				
				
				<div class="toggle_list_trigger">
					<h2><span>Google Webfonts</span></h2>
				</div>
				<div class="toggle_list_box">
					<div style="padding: 10px 30px;">
						
						<div class="system_help_text<%= ' hidden' unless Strangecms::Config[:show_help] %>">
							<div class="box">
								<div class="in_box">
									<p class="sys_help"><%= raw t('strange_stylez.helptext.google_webfonts') %></p>
								</div>
							</div>
						</div>
						
						
						
						<%= form_tag(admin_setting_path(@name), :method => :put) do -%>
						<%= hidden_field_tag('name', @name, :size => 50 ) %>
						<table class="settings">
							<%= ff_google_font_row( 'one' ) %>
							<%= ff_google_font_row( 'two' ) %>
							<%= ff_google_font_row( 'three' ) %>
							
						</table>
						<br/>
						<%= submit_tag 'senden' %>
						<% end %>

						<div class="clearfix"></div>
						
					</div>
				</div>
				
				<div class="clearfix"></div>
				
				
				<div class="toggle_list_trigger"><h2><span>:: Admin ::</span></h2></div><div class="toggle_list_box">
						
						<%= ff_fine_font_styler( 'headline', 'admin' ) %>
					
						<%= ff_fine_icon_styler( 'systemButton', :thing => 'icon', :area => 'admin' ) %>

				<div class="clearfix"></div></div><div class="clearfix"></div>
				
				
			</div>
		</div>
		<div class="box">
				<div class="trenn_linie"></div>
		</div>
		
		<!--
		<div class="box">
			<div class="in_box">
				<%#= render 'edit_buttons' %>
			</div>
		</div>
		-->
	</div>
</div>

<%= render 'sidebar' %>


