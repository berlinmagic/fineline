				<div class="toggle_list_box">
					
						<%= ff_fine_icon_styler( 'lightboxNav' ) %>
						
						<%= ff_fine_icon_styler( 'lightboxNav', 'admin' ) %>
						
						<%= ff_fine_icon_styler( 'systemButton' ) %>
						
						<%= ff_fine_icon_styler( 'finelineButton' ) %>

						<div class="clearfix"></div>
						
						
				</div>
				
				<div class="clearfix"></div>
				
				
			</div>
		</div>
		<div class="box">
				<div class="trenn_linie"></div>
		</div>
		
		<div class="box">
			<div class="in_box">
				<%= render 'edit_buttons' %>
			</div>
		</div>
		
	</div>
</div>

<%= render 'sidebar' %>


<% content_for :js_stuff do %>

<script type="text/javascript">
$(function() {
	

	
	$('.pick_color').jPicker({ localization: { text: { ok: 'übernehmen', cancel: 'verwerfen' }} }, function(color, context)
	        {
	          var all = color.val('all');
	          // alert('Color chosen - hex: ' + (all && '#' + all.hex || 'none') + ' - alpha: ' + (all && all.a + '%' || 'none'));
	          $(this).parent().parent().parent().parent().find('.vorschau').css(
	            {
	              color: all && '#' + all.hex || 'transparent'
	            }); // prevent IE from throwing exception if hex is empty
	        });
	
	

	
	<%= ff_fine_icon_scripter( 'lightboxNav' ) %>
	<%= ff_fine_icon_scripter( 'systemButton' ) %>
	<%= ff_fine_icon_scripter( 'finelineButton' ) %>
	<%= ff_fine_icon_scripter( 'lightboxNav', 'admin' ) %>
	
	$('.ff_Btn_pick_color').jPicker({ localization: { text: { ok: 'übernehmen', cancel: 'verwerfen' }} });
	
	$('.farbwahl').change(function(){
		$(this).parent().parent().parent().find('.color_2').toggleClass('invisible');
	});
	
	$('.ff_Btn_style').change(function(){
		if ( $(this).val() == 'gerunded' ) {
			$(this).parent().find('.btn_rds.hidden').hide().removeClass('hidden');
			$(this).parent().find('.btn_rds').slideDown();
		} else {
			$(this).parent().find('.btn_rds').slideDown();
		}
	});

		
});


</script>
<% end %>