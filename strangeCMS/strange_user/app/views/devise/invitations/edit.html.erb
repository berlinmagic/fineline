<div class="box">
	<div class="in_box first">
		<h1><%= t("Set_your_password") %></h1>
	</div>
</div>

<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f| %>
<%= f.hidden_field :invitation_token %>

<div class="box">
	<div class="in_box">
		<%= strange_devise_error_messages! %>
			<table class="login">
				<tr>
					<th><%= f.label :password, t("password") %></th>
					<td><%= f.password_field :password %></td>
				</tr>
				<tr>
					<th><%= f.label :password_confirmation, t("password_confirmation") %></th>
					<td><%= f.password_field :password_confirmation %></td>
				</tr>
			</table>
	</div>
</div>

<div class="box">
	<div class="in_box">
		<%= f.submit t("Set_my_password") %>
		<div class="big_button_spacer"><%= t('or') %></div>
		<%= link_to t('back'), :back, :class => 'big_button' %>
		<div class="clearfix"></div>
	</div>
</div>

<% end %>
