<div class="box">
	<div class="in_box first">
		<h1 class="icon"><%= finelineIcon(:icon => 42, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('Sign_up') %></h1>

	</div>
</div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<div class="box">
	<div class="in_box">
		<%= strange_devise_error_messages! %>
			<table class="login">
				<tr>
					<th><%= f.label :anrede, t("anrede") %></th>
					<td><%= f.select :anrede, User::USER_TYPIES.map { |c| [I18n.t(c), c] }, :include_blank => true %></td>
				</tr>
				<tr>
					<th><%= f.label :vorname, t("vorname") %></th>
					<td><%= f.text_field :vorname %></td>
				</tr>
				<tr>
					<th><%= f.label :name, t("name") %></th>
					<td><%= f.text_field :name %></td>
				</tr>
				<tr>
					<th><%= f.label :email, t("email") %></th>
					<td><%= f.text_field :email %></td>
				</tr>
				<tr>
					<th><%= f.label :password, t("password") %></th>
					<td><%= f.password_field :password %></td>
				</tr>
				<tr>
					<th><%= f.label :password_confirmation, t("password_confirmation") %></th>
					<td><%= f.password_field :password_confirmation %></td>
				</tr>
			</table>
	</div>
</div>

<div class="box">
	<div class="in_box">
		<%= f.submit t("Sign_up_button") %>
		<div class="big_button_spacer"><%= t('or') %></div>
		<%= link_to t('back'), :back, :class => 'big_button' %>
		<div class="clearfix"></div>
	</div>
</div>

<% end %>

<div class="box">
	<div class="in_box">
		<%= render :partial => "devise/shared/links" %>
		<div class="clearfix"></div>
	</div>
</div>