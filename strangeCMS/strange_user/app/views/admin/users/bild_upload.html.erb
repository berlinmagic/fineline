<div class="admin_box">
	
	<div id='inviting_form'>
		
	<h1><%= t(@user.anrede) %> <%= @user.vorname %> <%= @user.name %> .. User-Bild Uploud</h1>
	
	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<p>Hier kÃ¶nnen Sie ein neues Bild hinterlegen</p>
			</div>
		</div>
		
		
		<%= form_for(@user, :html => { :multipart => true, :method => :put }, :url => { :controller => 'admin/users', :action => :pic_up}) do |f| %>
		
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= render 'shared/error', :item => f.object%>
			</div>
		</div>
		
		
		<div class="box">
			<div class="in_box white">
				
					
					<table class="login">
						<tr>
							<th><%= f.label :bild %></th>
							<td><%= f.file_field :bild %></td>
						</tr>
					</table>
			</div>
		</div>
		
		<div class="box">
			<div class="in_box">
				<%= f.submit 'Upload' %>
				<div class="big_button_spacer"><%= t('or') %></div>
				<%= link_to t('back'), :back, :class => 'big_button' %>
				<div class="clearfix"></div>
			</div>
		</div>
		
		<% end %>
		
	</div>
	
	</div>
</div>

