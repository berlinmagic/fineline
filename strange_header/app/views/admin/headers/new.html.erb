<%= render 'admin/shared/seiten_sub_menu' %>

<div class="admin_box">
	<h1><%= t('header_new') %></h1>
	<div class="admin_in_box">
		<%= form_for(@header, :url => { :controller => 'admin/headers'}) do |f| %>
		<div class="box">
			<div class="in_box">
				<p>Hier haben Sie die Möglichkeit die Reihenfolge bestehender Headerbilder zu verändern und weitere Bilder hinzuzufügen.</p>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>

		<div class="box">
			<div class="in_box white">
				<%= render 'form', :f => f %>
			</div>
		</div>
		
		<div class="box">
			<div class="in_box">
				<%= f.submit %>
				<div class="clearfix"></div>
			</div>
		</div>
		
		<% end %>
	</div>
</div>

<%= render 'sidebar' %>