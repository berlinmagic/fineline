<%= render 'admin/shared/seiten_sub_menu' %>

<%= form_for(@header, :url => { :controller => 'admin/headers'}) do |f| %>

<div class="admin_box">
	<h1 class="admin"><%= finelineIcon(:icon => 49, :color => 'dunkel', :size => 24, :blur => 50) %><%= t('header_new_headline') %></h1>
	<div class="admin_in_box">
		
		<div class="system_help_text<%= ' hidden' unless Strangecms::Config[:show_help] %>">
			<div class="box">
				<div class="in_box">
					<p class="sys_help"><%= t('strange_header.new_header_help_text') %></p>
				</div>
			</div>

			<div class="trenn_linie"></div>
		</div>
		

		<div class="box">
			<div class="in_box">
				<%= render 'form', :f => f %>
			</div>
		</div>
		
		<div class="trenn_linie"></div>
		
		<div class="box">
			<div class="in_box">
				<%= render 'erweitert', :f => f %>
			</div>
		</div>
		
	</div>
	<div class="box">
		<div class="in_box">
			<div class="fl_box_110 erster">
				<%= f.submit 'speichern' %>
				<div class="clearfix"></div>
			</div>
			<div class="fl_box_350">
				<%= link_to t('cancel'), :back, :class => 'big_button' %>
				<div class="clearfix"></div>
			</div>
			<div class="clearfix"></div>
		</div>

	</div>
</div>

<% end %>

<%= render 'sidebar' %>