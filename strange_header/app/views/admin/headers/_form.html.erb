<%= render 'shared/error', :item => f.object%>


<div class="fl_box_110 erster">
	<label><%= t('strange_header.name') %></label>
</div>
<div class="fl_box_350">
	<%= f.text_field :name, :class => 'full' %>
</div>
<div class="vspacer"></div>


<div class="fl_box_110 erster">
	<label><%= t('strange_header.typ_choose') %></label>
</div>
<div class="fl_box_350">
	<div class="fineline_select std_select full">
		<a href="#" class="fineline_select_trigger"></a>
		<div class="fineline_select_box hidden">
			<ul>
				<% Header::HEADER_STYLES.each do |gruppe| %>
					<li class="level_0"><%= link_to t(gruppe), gruppe %></li>
				<% end %>
			</ul>
		</div>
		<span class="fineline_select_text selected"><%= @header.typ %></span>
		<%= f.hidden_field :typ, :value => @header.typ, :class => 'fineline_select_box_input' %>
	</div>
	<div class="clearfix"></div>
</div>
<div class="vspacer"></div>

<div class="fl_box_110 erster">
	<label><%= t('strange_header.header_format_desc') %></label>
</div>
<div class="fl_box_350">
	<%= f.text_field :width, :class => 'half' %><%= f.text_field :height, :class => 'half' %>
</div>
<div class="vspacer"></div>


