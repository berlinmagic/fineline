<% content_for :sidebar do %>
<div class="side_box">
	<div class="sidebar_head aktiv_box">
		<a href="#">Header</a>
	</div>
	<ul class='sidebar'>
		<li><%= link_to t('strange_header.links.index'), admin_headers_path, :class => "#{'aktiv' if @u_aktiv == 'index'}" %></li>
		<li><%= link_to t('strange_header.links.new'), new_admin_header_path, :class => "#{'aktiv' if @u_aktiv == 'new'}" %></li>
		<li>
			<% if @header %>
				<% if @u_aktiv == "edit" %>
					<%= link_to t('strange_header.links.edit'), edit_admin_header_path(@header), :class => "aktiv" %>
				<% elsif @u_aktiv != "new" %>
					<%= link_to t('strange_header.links.edit'), edit_admin_header_path(@header) %>
				<% else %>
					<p><%= t('strange_header.links.edit') %></p>
				<% end %>
			<% else %>
				<p><%= t('strange_header.links.edit') %></p>
			<% end %>
		</li>
		<% if @header && @header.name && @header.name != 'Standard_Header' %>
		<li>
			<%= strange_delete_text_link( @header, :url => admin_header_path(@header), :link_text => t('strange_header.links.delete') ) %>
		</li>
		<% end %>
	</ul>
</div>

<div class="side_box">
	<div class="sidebar_head <%= 'aktiv_box' if @header && @u_aktiv != "new" %>">
		<a href="#">Headerinhalt</a>
	</div>
	<ul class='sidebar'>
		
		<li>
			<% if @header %>
				<% if @u_aktiv == "show" %>
					<%= link_to t('strange_header.links.show'), admin_header_path(@header), :class => "aktiv" %>
				<% elsif @u_aktiv != "new" %>
					<%= link_to t('strange_header.links.show'), admin_header_path(@header) %>
				<% else %>
					<p><%= t('strange_header.links.show') %></p>
				<% end %>
			<% else %>
				<p><%= t('strange_header.links.show') %></p>
			<% end %>
		</li>
		<li>
			<% if @header %>
				<% if @u_aktiv == "show" %>
					<%= link_to t('strange_header.links.new_pic'), new_admin_header_hpic_path(@header), :class => "colorB" %>
				<% elsif @u_aktiv != "new" %>
					<%= link_to t('strange_header.links.new_pic'), new_admin_header_hpic_path(@header), :class => "colorB" %>
				<% else %>
					<p><%= t('strange_header.links.new_pic') %></p>
				<% end %>
			<% else %>
				<p><%= t('strange_header.links.new_pic') %></p>
			<% end %>
	</ul>
</div>


<div class="side_box">
	<div class="sidebar_head aktiv_box">
		<a href="#">Hilfe</a>
	</div>
	<ul class='sidebar'>
		<li><%= link_to raw("#{ t('help_text_link') } <span class='link_help_show#{' hidden' if Strangecms::Config[:show_help] }'>#{t('help_text_link_show')}</span> <span class='link_help_show#{' hidden' unless Strangecms::Config[:show_help] }'>#{t('help_text_link_hide')}</span>"), '#', :class => 'show_system_help' %></li>
	</ul>
</div>
<% end %>
