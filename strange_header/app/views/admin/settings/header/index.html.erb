<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 49, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_header.settings') %></h1>
	<div class="admin_in_box">
		
		<div class="box">
			<div class="in_box">
				<h3>Hier sehen Sie die momentan aktiven Felder Ihres Kontakt-Formulars:</h3>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<table class="settings">
					<tr>
						<th>Header sind </th>
						<td>
							<% if Strangecms::Header::Config[:aktiv] %>
								<span class="cool">aktiv</span>
							<% else %>
								<span class="panic">Achtung, inaktiv!</span>
							<% end %>
						</td>
					</tr>
					<tr>
						<th><%= t('strange_header.setting.generell_show_header') %></th>
						<td>
							<%= Strangecms::Header::Config[:generell_show_header] ? 'aktiv' : 'inaktiv' %>
						</td>
					</tr>
					
					<tr>
						<th colspan="2" class="norm1"><%= t('strange_header.setting.generell_show_header_help')%></th>
					</tr>
				
				</table>
				
			</div>
		</div>

		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= link_to t("edit_settings"), edit_admin_settings_header_index_path, :class => 'big_submit_button' %>
				<div class="clearfix"></div>

				     
			</div>
		</div>
	</div>
</div>


<%= render 'admin/settings/sidebar' %>