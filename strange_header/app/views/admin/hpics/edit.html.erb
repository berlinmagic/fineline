<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 76, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_header.headlines.edit_hpic') %></h1>

	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<p>Hier haben Sie die Möglichkeit ein neues Headerbild hinzuzufügen.</p>
			</div>
		</div>
		<%= form_for( @hpic, :url => admin_hpic_path(@hpic), :html => { :multipart => true } ) do |f| %>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= render 'shared/error', :item => f.object%>
			</div>
		</div>
		
		<div class="box">
			<div class="in_box white">
				<table>
					<tr>
						<th><%= f.label :name %></th>
						<td><%= f.text_field :name %></td>
					</tr>
					<tr>
						<th><%= f.label :titel %></th>
						<td><%= f.text_field :titel %></td>
					</tr>
					<tr>
						<th><%= f.label :inhalt %></th>
						<td><%= f.text_area :inhalt, :size => '42x5' %></td>
					</tr>
					<tr>
						<th><%= f.label :bild %></th>
						<td><%= f.file_field :bild %></td>
					</tr>
					
				</table>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= f.hidden_field :header_id, :value => @header.id %>

				<%= f.submit %>
				<div class="clearfix"></div>
			</div>
		</div>
		<% end %>
	</div>
</div>







