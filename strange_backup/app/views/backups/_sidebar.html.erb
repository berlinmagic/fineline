<% if @seite && @seite.backups.count > 0 && admin_check %>
<% bkp_count = @seite.backups.count %>
	<div class="side_box">
		<div class="sidebar_head">
			<a href="#">Backups</a>
		</div>
		<ul class='sidebar'>
			<% @seite.backups.each_with_index do |bkp,index| %>
				<li><%= link_to 'Version '+(bkp_count - index).to_s+' - '+bkp.created_at.strftime('%d.%m. - %H:%M').to_s, backup_path(bkp) %></li>
			<% end %>
		</ul>
	</div>
<% end %>

