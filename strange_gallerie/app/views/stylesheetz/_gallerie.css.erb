#gallerie_show { padding: 0; margin: 0 -5px; position: relative; }


#gallerie_show .paginator_wrapper { margin: 0 5px 10px;}

.bild_box_folder { float: left; position: relative;
	width: 200px; height: 240px;
	margin: 10px; padding: 10px 3px;
	border: ridge 1px #efefef;
	background: #fff url("/images/back.png") left top repeat;
	-webkit-border-radius: 3px; -moz-border-radius: 3px; border-radius: 3px;
	}
.bild_box_folder p { font-size: 15px; font-weight: bold; padding: 10px 5px; text-align: center;}
.bild_box_folder:hover { border: solid 1px #3878ae; background: #fff url("/images/back.png") left top repeat; }

.bild_box { float: left; position: relative;
   display: block;
   margin: 0 10px 10px 0; padding: 3px;
   border: ridge 1px #efefef; 
   background:#fff; <%= fine_borderRadius( '3px' ) %> }
.bild_box:hover { border: solid 1px #3878ae; background: #fff url("/images/back.png") left top repeat; }


a.pic_btn_del {  width: 16px; height: 16px; position:absolute; top:0; background: transparent url('/images/btns/loeschen_16px.png') 0px 0px no-repeat; right: 5px; display:block; opacity: 0;}

.selected_tag:hover a.pic_btn_del { opacity: .65; }
.bild_box_folder:hover a.pic_btn_del { opacity: .65; }
.bild_box:hover a.pic_btn_del { opacity: .65; }
a.pic_btn_del:hover { opacity: 1; }

.left_meta { width: 40%; padding: 0 5%; float:left; }
.right_meta { width: 40%; padding: 0 5%; float:right; }

.right_meta table, .left_meta table { width: 100%; }
.right_meta table th, .left_meta table th { padding: 5px 10px 5px 0px; }
.right_meta table td, .left_meta table td { padding: 5px 10px 5px 0px; }

.gpix_box {
	position: relative;
	display: block;
	margin: 0;
	padding: 4px;
	background: transparent;
	border: solid 1px #336699;
	/*background: #f3f3f3 url('/images/back.png');*/
	background: #fff;
}

.gpix_box .in_box_admin_toolz { position: absolute; top:0; right:0; text-align:right; padding: 4px; display:block; background: #fff; 
	<% if finestyler( 'systemButton_style', 'front' ) == 'gerunded' %>
		<%= fineBorderRadius( '', '', '', "#{ finestyler( 'systemButton_border_radius', 'front' ) }px" ) %> 
	<% elsif finestyler( 'systemButton_style', 'front' ) == 'rund' %>
		<%= fineBorderRadius( '', '', '', "#{ finestyler( 'systemButton_icon_size', 'front' ).to_i / 2 + finestyler( 'systemButton_border_width', 'front' ).to_i }px" ) %>
	<% else %>
		<%= fineBorderRadius( '', '', '', "" ) %>
	<% end %>
		}


a.gpix_box:hover { border: solid 1px #3878ae; background: #fff; }

