<%= render 'admin/shared/module_sub_menu' %>

<div class="admin_box">
	<h1>Bilder</h1>
	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<% if @bilder.count > 1 %>
					<h2>Aktuell sind <%= @bilder.count %> Bilder vorhanden.</h2>
				<% elsif @bilder.count == 1 %>
					<h2>Aktuell ist <%= @bilder.count %> Bild vorhanden.</h2>
				<% else %>
					<h2>Aktuell sind keine Bilder vorhanden.</h2>
				<% end %>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<% @bilder.each do |bild| %>
					<%= render 'pic', :bild => bild %>
				<% end %>
				<div class="clearfix"></div>
			</div>
		</div>
		
	</div>
</div>

<%= render 'admin/gallerien/sidebar' %>