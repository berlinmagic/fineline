					<tr>
						<td colspan="6" style="text-align: center;">&nbsp;</td>
					</tr>
					<tr>

						<th colspan="5">Querformat</th>
						<td>&nbsp;</td>
					</tr>
					<tr>

						<td>große Darstellung</td>
						<td>&nbsp;</td>
						<td><%= Strangecms::Gallerie::Config[:querformat_width] %></td>
						<td>&times;</td>
						<td><%= Strangecms::Gallerie::Config[:querformat_height] %></td>
						<td>&nbsp;</td>
