<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 58, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_gallerie.headlines.settings') %></h1>

	<div class="admin_in_box">
		
		<div class="box">
			<div class="in_box">
				<h3>Hier sehen Sie die momentan verwendeten Bild-größen:</h3>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box ">
				<table class="settings">
					<tr>
						<th>Gallerie-Modul</th>
						<td>&nbsp;</td>
						<td colspan="3"><%= Strangecms::Gallerie::Config[:aktiv] ? 'aktiv' : 'inaktiv' %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<td colspan="6" style="text-align: center;">&nbsp;</td>
					</tr>
					<tr>
						<th><%= t('strange_gallerie.settings.pic_show') %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= t("strange_gallerie.pic_show.#{ Strangecms::Gallerie::Config[:pic_show] }") %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<td colspan="6" style="text-align: center;">&nbsp;</td>
					</tr>
					<tr>
						<th><%= t('strange_gallerie.settings.use_watermarks') %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= Strangecms::Gallerie::Config[:use_watermarks] ? 'aktiv' : 'inaktiv' %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<th colspan="6" style="text-align: left;"><%= t('strange_gallerie.settings.show_watermarks') %></th>
					</tr>
					<tr>
						<th><%= t('strange_gallerie.settings.lightbox_watermark') %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= Strangecms::Gallerie::Config[:lightbox_watermark] ? 'aktiv' : 'inaktiv' %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<th><%= t('strange_gallerie.settings.show_watermark') %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= Strangecms::Gallerie::Config[:show_watermark] ? 'aktiv' : 'inaktiv' %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<th><%= t("strange_gallerie.settings.watermark_type") %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= t("strange_gallerie.settings.watermark_types.#{ Strangecms::Gallerie::Config[:watermark_type] }") %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<th><%= t("strange_gallerie.settings.watermark_tile") %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= Strangecms::Gallerie::Config[:watermark_tile]   %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<th><%= t('strange_gallerie.settings.watermark_text') %></th>
						<td>&nbsp;</td>
						<td colspan="3"><%= Strangecms::Gallerie::Config[:watermark_text].to_s %></td>
						<td>&nbsp;</td>
					</tr>
					
					
					<tr>
						<th><%= t('strange_gallerie.settings.watermark_datei') %></th>
						<td colspan="2"><% if Strangecms::Gallerie::Config[:watermark_datei] && !Strangecms::Gallerie::Config[:watermark_datei].blank? %>
								<% if datei = Datei.find(Strangecms::Gallerie::Config[:watermark_datei]) %>
									<%= image_tag datei.file.thumb("100x350>").url() %>
								<% end %>
							<% end %>
						</td>
						<td>
							<%= form_tag(new_pref_pic_admin_settings_path, :method => :post) do %>
								<%= hidden_field_tag :prefs, 'Gallerie' %>
								<%= hidden_field_tag :modul, 'Gallerie' %>
								<%= hidden_field_tag :typ, 'Watermark' %>
								<%= hidden_field_tag :name, 'optik' %>
								<%= hidden_field_tag :back_link, '/admin/settings/gallerien' %>
								<%= hidden_field_tag :key, 'watermark_datei' %>
								<br/>
								<%= submit_tag 'neu'%>
								<div class="clearfix"></div>
								<br/>
								
							<% end %>
						</td>
					</tr>
					
					
					<tr>
						<th colspan="6" style="text-align: center;">&nbsp;&nbsp;</th>
					</tr>
					<tr>
						<th colspan="6" style="text-align: center;">&nbsp;&nbsp;</th>
					</tr>

					
					
					<tr>
						<th>Standard-Format</th>
