						<td><%= Strangecms::Gallerie::Config[:panorama_height] %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>

						<td>miniatur Darstellung</td>
						<td>&nbsp;</td>
						<td><%= Strangecms::Gallerie::Config[:panorama_thumb_width] %></td>
						<td>&times;</td>
						<td><%= Strangecms::Gallerie::Config[:panorama_thumb_height] %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<td colspan="6" style="text-align: center;">&nbsp;</td>
