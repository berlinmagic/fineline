						<td><%= Strangecms::Gallerie::Config[:querformat_thumb_width] %></td>
						<td>&times;</td>
						<td><%= Strangecms::Gallerie::Config[:querformat_thumb_height] %></td>
						<td>&nbsp;</td>
					</tr>
					<tr>
						<td colspan="6" style="text-align: center;">&nbsp;</td>
					</tr>
					<tr>

						<th colspan="5">Panorama-Format</th>
						<td>&nbsp;</td>
					</tr>
					<tr>

						<td>große Darstellung</td>
