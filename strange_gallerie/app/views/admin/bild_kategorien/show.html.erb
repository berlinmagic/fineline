<%= render 'admin/shared/module_sub_menu' %>

<div class="admin_box">
	<h1><%= t('bild_kategorie_show') %></h1>
	<div class="admin_in_box">
		<div class="box">
			<div class="in_box">
				<p>Hier haben Sie die Möglichkeit weitere Bilder zur Kategorie <strong><%= @bild_kategorie.name %></strong> hinzuzufügen.</p>
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<h2><%= @bild_kategorie.name %> &mdash; [ <span id="data_counta"><%= @bild_kategorie.bilder.count %></span> ] Bilder:</h2>
				<p><%= @bild_kategorie.beschreibung %></p>
			</div>
		</div>

			
			<div class="box">
				<div class="trenn_box">
					<div class="top_trenner"></div>
				</div>
			</div>
			

			<div class="box">
				<div class="in_box" id="gallerie_pics">
					<%= render 'admin/gallerien/g_pics', :data => @bild_kategorie.bilder, :klasse => 'bild_kategorie' %>
					<div class="clearfix"></div>
				</div>
			</div>

		
		<div id="js_magick_place"></div>
		
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		
		<div class="box">
			<div class="in_box">
				<%= link_to 'Bild hinzufügen', available_admin_bild_kategorie_bilder_path(@bild_kategorie), :remote => true, :class => 'big_submit_button show_available' %>
				<div class="clearfix"></div>
			</div>
		</div>
		
	</div>
</div>

<%= render 'admin/gallerien/sidebar' %>