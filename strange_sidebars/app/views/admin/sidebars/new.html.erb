<%= render 'admin/shared/seiten_sub_menu' %>

<%= form_for(@sidebar, :url => { :controller => 'admin/sidebars'}, :html => { :multipart => true }) do |f| %>

<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 49, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_sidebars.headlines.new') %></h1>

	<div class="admin_in_box">
		
		<div class="system_help_text<%= ' hidden' unless Strangecms::Config[:show_help] %>">
			<div class="box">
				<div class="in_box">
					<p class="sys_help"><%= t('strange_sidebars.help_text.new') %></p>
				</div>
			</div>

			<div class="trenn_linie"></div>
		</div>
		

		<div class="box">
			<div class="in_box">
				<%#= render 'form', :f => f %>
				
				<div class="fl_box_110 erster">
					<label><%= t('strange_header.name') %></label>
				</div>
				<div class="fl_box_350">
					<%= f.text_field :name, :class => 'full' %>
				</div>
				<div class="vspacer"></div>
				
				
			</div>
		</div>
		
		<div class="trenn_linie"></div>
		
		<div class="box">
			<div class="in_box">
				<%#= render 'erweitert', :f => f %>
			</div>
		</div>
		
	</div>
	<div class="box">
		<div class="in_box">
			<div class="fl_box_110 erster">
				<%= f.submit 'speichern' %>
				<div class="clearfix"></div>
			</div>
			<div class="fl_box_350">
				<%= link_to t('cancel'), :back, :class => 'big_button' %>
				<div class="clearfix"></div>
			</div>
			<div class="clearfix"></div>
		</div>

	</div>
</div>

<% end %>

<%= render 'sidebar' %>