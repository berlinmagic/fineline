<%# render 'admin/shared/module_sub_menu' %>
<%= render 'shared/fck_editor' %>

<div class="admin_box">
	<h1 class="icon"><%= finelineIcon(:icon => 48, :color => finestyler('headline_icon_color'), :size => finestyler('headline_icon_size'), :blur => finestyler('headline_icon_blur')) %><%= t('strange_news.headlines.edit') %></h1>

	<div class="admin_in_box">
		<%= form_for @news, :url => admin_news_path, :html => { :multipart => true } do |f| %>
		<div class="box">
			<div class="in_box">
				
				<%= render 'form', :f => f %>
				
			</div>
		</div>
		<div class="box">
			<div class="trenn_box">
				<div class="top_trenner"></div>
			</div>
		</div>
		<div class="box">
			<div class="in_box">
				<%= f.submit %>
				<div class="big_button_spacer"><%= t('or') %></div>
				<%= link_to 'verwerfen', admin_news_index_path, :class => 'big_button' %>
				<div class="clearfix"></div>
			</div>
		</div>
		<% end %>
	</div>
</div>

<%= render 'sidebar' %>

