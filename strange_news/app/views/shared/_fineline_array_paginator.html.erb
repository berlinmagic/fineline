<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    num_pages:     total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<% current_page 	||= 	@page 			-%>
<% num_pages 		||= 	@page_count  	-%>
<% page_url 		||=		@page_url 		-%>
<% last 	= 	current_page == num_pages ? 	true : false  	-%>
<% first 	= 	current_page == 1 ? 			true : false 	-%>
<% style    = 	style || ''  -%>

<% if @fineline_array_paginated && num_pages > 1 %>

		<nav class="pagination<%= ' '+style if !style.blank? %>">
			<strong>Seite <%= current_page %> von <%= num_pages %> </strong>&nbsp;&nbsp;&nbsp;
		    
			<%# first_page_tag unless current_page.first? %>
			
			<span class="prev<%= ' current' if first %>">
				<% unless first %>
					<%= link_to raw(t 'views.pagination.previous'), "#{ page_url }/page/#{ current_page - 1 }" %>
				<% else %>
					<%= raw(t 'views.pagination.previous') %>
				<% end %>
			  
			</span>
			
			<span class="next<%= ' current' if last %>">
				<% unless last %>
					<%= link_to raw(t 'views.pagination.next'), "#{ page_url }/page/#{ current_page + 1 }" %>
				<% else %>
					<%= raw(t 'views.pagination.next') %>
				<% end %>
			</span>
			
		    <%# last_page_tag unless current_page.last? %>
		  </nav>

<% else %>

	

<% end %>

