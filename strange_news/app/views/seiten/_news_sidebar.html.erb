<% news = @one_news ? @one_news : News.aktiv.first %>

<% if @seite && @seite.system_name && @seite.system_name == 'news_site' %>

	<%= render 'sidebars/news_kategorien', :news => news %>

	<%= render 'sidebars/news_archiv', :news => news %>

	<%= render 'sidebars/news_tags', :news => news %>

<% else %>

	<%= render 'sidebars/news_aktuell', :news => news %>

<% end %>


