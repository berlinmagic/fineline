<% komentar_box_radius = '3px' -%>
<% komentar_box_shaddow = 'inset 2px 2px 3px 0px rgba(204,204,204,.7)' -%>
/* = = = = = = = = = = = = = = =   MODUL::  Comments   = = = = = = = = = = = = = = = = = = = = = = = = = = = */
h2.komentare_headline { padding: 10px 23px 15px; margin:0; background: transparent url('/images/fineline/spezial/kommentar.png') 0px 12px no-repeat; color: #336699; font-size: 15px; font-style: italic;font-weight: bold; }


h2.kommentar_form_head { padding: 10px 23px 15px; margin:0; background: transparent url('/images/fineline/spezial/closed_pulldown.png') 3px 12px no-repeat; color: #336699; font-size: 15px; font-style: italic;font-weight: bold; cursor: pointer; }
h2.kommentar_form_head.aktiv { background: transparent url('/images/fineline/spezial/pulldown.png') 3px 12px no-repeat; }
h2.kommentar_form_head a { color: #336699; font-size: 15px; font-style: italic;font-weight: bold; }
h2.kommentar_form_head a:hover { color: #666666; font-size: 15px; font-style: italic;font-weight: bold; }


#kommentar_form_box { padding: 0px 20px 10px; }

#kommentar_form_box #error_explanation { margin: 0 0 10px;}

.kommentar_box { padding: 0px 23px 10px; position:relative;}
.kommentar_head { padding: 0; line-height: 18px; }
.kommentar_head .kommentar_user_name { color: #336699; font-weight: bold; font-size: 12px; }
.kommentar_head .kommentar_date { color: #999999; font-weight: bold; font-size: 10px; }

.kommentar_box:hover .abschnitt_admin_toolz {display:block; visibility: visible !important;}
.kommentar_inhalt { padding: 5px 10px; color: #444; font-size:13px; font-style: italic;
	
	position:relative;
	
	background: #e9e9e9; /* Old browsers */
	background: -moz-linear-gradient(top, #e9e9e9 0%, #f3f3f3 100%); /* FF3.6+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#e9e9e9), color-stop(100%,#f3f3f3)); /* Chrome,Safari4+ */
	background: -webkit-linear-gradient(top, #e9e9e9 0%,#f3f3f3 100%); /* Chrome10+,Safari5.1+ */
	background: -o-linear-gradient(top, #e9e9e9 0%,#f3f3f3 100%); /* Opera11.10+ */
	background: -ms-linear-gradient(top, #e9e9e9 0%,#f3f3f3 100%); /* IE10+ */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#e9e9e9', endColorstr='#f3f3f3',GradientType=0 ); /* IE6-9 */
	background: linear-gradient(top, #e9e9e9 0%,#f3f3f3 100%); /* W3C */
	
	border: 1px solid #cccccc;
	border-radius: 			<%= komentar_box_radius %>;
	-webkit-border-radius: 	<%= komentar_box_radius %>; 
	-moz-border-radius: 	<%= komentar_box_radius %>; 
	-o-border-radius: 		<%= komentar_box_radius %>; 
	-ms-border-radius: 		<%= komentar_box_radius %>; 
	
	box-shadow: 			<%= komentar_box_shaddow %>;
	-moz-box-shadow: 		<%= komentar_box_shaddow %>;
	-webkit-box-shadow: 	<%= komentar_box_shaddow %>;
	-o-box-shadow: 			<%= komentar_box_shaddow %>;
	-ms-box-shadow: 		<%= komentar_box_shaddow %>;
	
	 }
#kommentar_form_box input[type="text"], #kommentar_form_box textarea {
	margin: 3px 0px 10px;
	background: #fff;
	border: 1px solid #cccccc;
	color: #444;
	border-radius: 			<%= komentar_box_radius %>;
	-webkit-border-radius: 	<%= komentar_box_radius %>; 
	-moz-border-radius: 	<%= komentar_box_radius %>; 
	-o-border-radius: 		<%= komentar_box_radius %>; 
	-ms-border-radius: 		<%= komentar_box_radius %>; 
	
	box-shadow: 			<%= komentar_box_shaddow %>;
	-moz-box-shadow: 		<%= komentar_box_shaddow %>;
	-webkit-box-shadow: 	<%= komentar_box_shaddow %>;
	-o-box-shadow: 			<%= komentar_box_shaddow %>;
	-ms-box-shadow: 		<%= komentar_box_shaddow %>;
	 }
#kommentar_form_box .field_with_errors input[type="text"], #kommentar_form_box .field_with_errors textarea {
	border: 1px solid red;
}
#kommentar_form_box .field_with_errors input[type="text"]:focus, #kommentar_form_box .field_with_errors textarea:focus { border: 1px solid #336699; }
