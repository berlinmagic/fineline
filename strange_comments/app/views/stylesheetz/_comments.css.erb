.kommentar_form_head { cursor: pointer; }
.kommentar_form_head a:hover { color: #000; font-weight: bold; }


#kommentar_form_box { padding: 0px 20px 10px; }

#kommentar_form_box #error_explanation { margin: 0 0 10px;}

.kommentar_box { padding: 0px 23px 10px; position:relative;}
.kommentar_head { padding: 0; line-height: 18px; }
.kommentar_head .kommentar_user_name { color: #336699; font-weight: bold; font-size: 12px; }
.kommentar_head .kommentar_date { color: #999999; font-weight: bold; font-size: 10px; }

.kommentar_box:hover .abschnitt_admin_toolz {display:block; visibility: visible !important;}
.kommentar_inhalt { padding: 5px 10px; color: #444; font-size:13px; font-style: italic; position:relative; border: 1px solid #cccccc;
	<%= fine_backgroundGradient( '#e9e9e9', '#f3f3f3' ) %> <%= fine_borderRadius( '3px' ) %>
	<%= fine_boxShadow( 'inset 2px 2px 3px 0px rgba(204,204,204,.7)' ) %> }

.kommentar_box .kommentar_text { word-wrap: break-word; }

#kommentar_form_box input[type="text"], #kommentar_form_box textarea {
	margin: 3px 0px 10px; background: #fff; border: 1px solid #cccccc; color: #444;
	<%= fine_borderRadius( '3px' ) %> <%= fine_boxShadow( 'inset 2px 2px 3px 0px rgba(204,204,204,.7)' ) %> }
	
#kommentar_form_box .field_with_errors input[type="text"], #kommentar_form_box .field_with_errors textarea { border: 1px solid red; }
#kommentar_form_box .field_with_errors input[type="text"]:focus, #kommentar_form_box .field_with_errors textarea:focus { border: 1px solid #336699; }
