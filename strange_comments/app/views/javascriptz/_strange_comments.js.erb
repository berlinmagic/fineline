
$('#kommentar_form_box .tipped').defaultValue();


$('.kommentar_form_head a').live('click', function(event){
	event.preventDefault();
	$('#kommentar_form_box').slideToggle();
	$('.kommentar_form_head').toggleClass('aktiv');
});

$('.kommentar_form_toggle_remote_link').live('click', function(event){
	event.preventDefault();
	$(this).parent().parent().parent().find('.kommentar_text').fadeOut('300').hide();
    $(this).parent().parent().parent().find('.kommentar_form_feld').hide().removeClass("hidden").fadeIn('900');
	$(this).fadeOut('500');
  });
